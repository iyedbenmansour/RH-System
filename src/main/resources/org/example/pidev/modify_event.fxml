<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>

<VBox spacing="20" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.pidev.controller.ModifyEventController"
      style="-fx-background-color: linear-gradient(to bottom right, #ecf0f1, #d0d3d4);
             -fx-padding: 30;
             -fx-pref-width: 1200;
             -fx-pref-height: 700;">

    <Label text="📝 Modify Event"
           style="-fx-font-size: 28px;
                  -fx-text-fill: linear-gradient(to right, #2c3e50, #3498db);
                  -fx-font-family: 'Arial';
                  -fx-font-weight: bold;
                  -fx-padding: 10;">
        <effect>
            <Glow level="0.7"/>
            <DropShadow color="rgba(0,0,0,0.3)" radius="5" spread="0.2"/>
        </effect>
    </Label>

    <GridPane hgap="15" vgap="15"
              style="-fx-background-color: rgba(255,255,255,0.98);
                     -fx-background-radius: 15;
                     -fx-border-radius: 15;
                     -fx-border-color: rgba(0,0,0,0.1);
                     -fx-border-width: 1;
                     -fx-padding: 30;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <Label text="📝 Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="📖 Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="📆 Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="datePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="📍 Location:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="locationField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="👤 Organiser:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="organiserField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="🎭 Event Type:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="eventTypeField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="👥 Participants:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="nbParticipantField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="💰 Ticket Price:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextField fx:id="ticketPriceField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="📚 Has Formation:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <CheckBox fx:id="hasFormationCheckBox" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

        <Label text="📌 Select Formation:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
        <ComboBox fx:id="formationComboBox" GridPane.rowIndex="9" GridPane.columnIndex="1" disable="true"/>

        <!-- Added fields for Longitude and Latitude -->
        <Label text="🌍 Longitude:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
        <TextField fx:id="longitudeField" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

        <Label text="🌍 Latitude:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
        <TextField fx:id="latitudeField" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

    </GridPane>

    <VBox alignment="CENTER" spacing="20">
        <HBox spacing="20" alignment="CENTER">
            <Button text="✅ Save Changes" onAction="#saveChanges"
                    style="-fx-background-color: linear-gradient(to right, #3498db, #2980b9);
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-font-size: 16px;
                           -fx-background-radius: 30;
                           -fx-padding: 12 40;
                           -fx-min-width: 140px;
                           -fx-min-height: 45px;
                           -fx-cursor: hand;">
                <effect>
                    <DropShadow color="rgba(52,152,219,0.3)" radius="8"/>
                </effect>
            </Button>

            <Button text="🗑️ Delete Event" onAction="#deleteEvent"
                    style="-fx-background-color: linear-gradient(to right, #e74c3c, #c0392b);
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-font-size: 16px;
                           -fx-background-radius: 30;
                           -fx-padding: 12 40;
                           -fx-min-width: 140px;
                           -fx-min-height: 45px;
                           -fx-cursor: hand;">
                <effect>
                    <DropShadow color="rgba(231,76,60,0.3)" radius="8"/>
                </effect>
            </Button>

        </HBox>
    </VBox>

</VBox>
