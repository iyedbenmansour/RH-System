<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pidev.controller.ModifyEventController">
<VBox spacing="20" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"

      style="-fx-background-color: linear-gradient(to bottom, #000000, #0d1c6a);
             -fx-padding: 30; -fx-pref-width: 1500;-fx-pref-height: 800;">

    <Label text="📝 Modify Event"
           style="-fx-font-size: 28px;
                  -fx-text-fill: white;
                  -fx-font-family: 'Roboto Light';
                  -fx-font-weight: bold;
                  -fx-padding: 10;">
        <effect>
            <Glow level="0.8"/>
            <DropShadow color="rgba(0,0,0,0.3)" radius="5" spread="0.2"/>
        </effect>
    </Label>

    <GridPane hgap="15" vgap="15"
              style="-fx-background-color: rgba(184,184,184,0.34);
                     -fx-background-radius: 15;
                     -fx-border-radius: 15;
                     -fx-border-color: rgba(0,0,0,0.1);
                     -fx-border-width: 1;
                     -fx-padding: 25;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <Label text="📝 Event Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                   style="-fx-background-color: white;
                          -fx-background-radius: 8;
                          -fx-border-radius: 8;
                          -fx-border-color: #bdc3c7;
                          -fx-border-width: 1.5;
                          -fx-padding: 10;
                          -fx-font-size: 12px;
                          -fx-pref-width: 400; -fx-pref-height: 90;"/>

        <Label text="📖 Description:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <TextField fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                  style="-fx-background-color: white;
                        -fx-background-radius: 8;
                        -fx-border-radius: 8;
                        -fx-border-color: #bdc3c7;
                        -fx-border-width: 1.5;
                        -fx-padding: 10;
                        -fx-font-size: 12px;
                        -fx-pref-height: 90;
                        -fx-pref-width: 400;"/>

        <Label text="📆 Date:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <DatePicker fx:id="datePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"
                    style="-fx-background-color: white;
                           -fx-background-radius: 8;
                           -fx-border-radius: 8;
                           -fx-border-color: #bdc3c7;
                           -fx-border-width: 1.5;
                           -fx-padding: 10;
                           -fx-font-size: 12px;
                           -fx-pref-height: 90;
                           -fx-pref-width: 400;"/>

        <Label text="📍 Location:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <TextField fx:id="locationField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                   style="-fx-background-color: white;
                          -fx-background-radius: 8;
                          -fx-border-radius: 8;
                          -fx-border-color: #bdc3c7;
                          -fx-border-width: 1.5;
                          -fx-padding: 10;
                          -fx-font-size: 12px;
                        -fx-pref-height: 90;
                          -fx-pref-width: 400;"/>

        <Label text="👤 Organiser:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <TextField fx:id="organiserField" GridPane.rowIndex="4" GridPane.columnIndex="1"
                   style="-fx-background-color: white;
                          -fx-background-radius: 8;
                          -fx-border-radius: 8;
                          -fx-border-color: #bdc3c7;
                          -fx-border-width: 1.5;
                          -fx-padding: 10;
                          -fx-font-size: 12px;
                        -fx-pref-height: 90;
                          -fx-pref-width: 400;"/>

        <Label text="🎭 Event Type:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <TextField fx:id="eventTypeField" GridPane.rowIndex="5" GridPane.columnIndex="1"
                   style="-fx-background-color: white;
                          -fx-background-radius: 8;
                          -fx-border-radius: 8;
                          -fx-border-color: #bdc3c7;
                          -fx-border-width: 1.5;
                          -fx-padding: 10;
                          -fx-font-size: 12px;
                        -fx-pref-height: 90;
                          -fx-pref-width: 400;"/>

        <Label text="👥 Participants:" GridPane.rowIndex="6" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <TextField fx:id="nbParticipantField" GridPane.rowIndex="6" GridPane.columnIndex="1"
                   style="-fx-background-color: white;
                          -fx-background-radius: 8;
                          -fx-border-radius: 8;
                          -fx-border-color: #bdc3c7;
                          -fx-border-width: 1.5;
                          -fx-padding: 10;
                          -fx-font-size: 12px;
                        -fx-pref-height: 90;
                          -fx-pref-width: 400;"/>

        <Label text="💰 Ticket Price:" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <TextField fx:id="ticketPriceField" GridPane.rowIndex="7" GridPane.columnIndex="1"
                   style="-fx-background-color: white;
                          -fx-background-radius: 8;
                          -fx-border-radius: 8;
                          -fx-border-color: #bdc3c7;
                          -fx-border-width: 1.5;
                          -fx-padding: 10;
                          -fx-font-size: 12px;
                        -fx-pref-height: 90;
                          -fx-pref-width: 400;"/>

        <Label text="📚 Has Formation:" GridPane.rowIndex="8" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <CheckBox fx:id="hasFormationCheckBox" GridPane.rowIndex="8" GridPane.columnIndex="1"
                  style="-fx-font-size: 12px;
                        -fx-pref-height: 90;"/>

        <Label text="📌 Select Formation:" GridPane.rowIndex="9" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <ComboBox fx:id="formationComboBox" GridPane.rowIndex="9" GridPane.columnIndex="1" disable="true"
                  style="-fx-font-size: 14px;
                 -fx-background-color: #f5f6fa;
                 -fx-background-insets: 0, 1;
                 -fx-border-radius: 12;
                 -fx-border-color: #bdc3c7;
                 -fx-border-width: 1;
                 -fx-text-fill: #2c3e50;
                 -fx-font-family: 'Roboto Light';
                 -fx-padding: 10 20;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0, 2, 2);"
                  promptText="Select Formation">
        </ComboBox>
        <Label text="🌍 Longitude:" GridPane.rowIndex="10" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <TextField fx:id="longitudeField" GridPane.rowIndex="10" GridPane.columnIndex="1"
                   style="-fx-background-color: white;
                          -fx-background-radius: 8;
                          -fx-border-radius: 8;
                          -fx-border-color: #bdc3c7;
                          -fx-border-width: 1.5;
                          -fx-padding: 10;
                          -fx-font-size: 12px;
                        -fx-pref-height: 90;
                          -fx-pref-width: 400;"/>

        <Label text="🌍 Latitude:" GridPane.rowIndex="11" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <TextField fx:id="latitudeField" GridPane.rowIndex="11" GridPane.columnIndex="1"
                   style="-fx-background-color: white;
                          -fx-background-radius: 8;
                          -fx-border-radius: 8;
                          -fx-border-color: #bdc3c7;
                          -fx-border-width: 1.5;
                          -fx-padding: 10;
                          -fx-font-size: 12px;
                        -fx-pref-height: 90;
                          -fx-pref-width: 400;"/>
    </GridPane>

    <HBox spacing="20" alignment="CENTER">
        <Button text="✅ Save Changes" onAction="#saveChanges"
                style="-fx-background-color: black;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-font-size: 16px;
                       -fx-background-radius: 30;
                       -fx-padding: 12 40;
                       -fx-min-width: 130px;
                       -fx-min-height: 45px;
                       -fx-cursor: hand;">
            <effect>
                <DropShadow color="rgba(52,152,219,0.3)" radius="8"/>
            </effect>
        </Button>
        <Button text="🗑️ Delete Event" onAction="#deleteEvent"
                style="-fx-background-color: white;
                       -fx-text-fill: black;
                       -fx-font-weight: bold;
                       -fx-font-size: 16px;
                       -fx-background-radius: 30;
                       -fx-padding: 12 40;
                       -fx-min-width: 130px;
                       -fx-min-height: 45px;
                       -fx-cursor: hand;">
            <effect>
                <DropShadow color="#192f69" radius="8"/>
            </effect>
        </Button>
    </HBox>
</VBox>
</ScrollPane>