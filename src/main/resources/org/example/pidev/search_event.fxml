<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>

<VBox spacing="20" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.pidev.controller.SearchEventController"
      style="-fx-background-color: linear-gradient(to bottom, #000000, #FF0000);
             -fx-padding: 30; -fx-pref-width: 1200; -fx-pref-height: 700;">

    <Label text="🔍 Search Event"
           style="-fx-font-size: 26px;
                  -fx-text-fill: white;
                  -fx-font-family: 'Roboto Light';
                  -fx-font-weight: bold;
                  -fx-padding: 10;">
        <effect>
            <Glow level="0.8"/>
            <DropShadow color="rgba(0,0,0,0.3)" radius="5" spread="0.2"/>
        </effect>
    </Label>

    <GridPane hgap="15" vgap="15"
              style="-fx-background-color: rgba(184,184,184,0.34);
                     -fx-background-radius: 15;
                     -fx-border-radius: 15;
                     -fx-border-color: rgba(0,0,0,0.1);
                     -fx-border-width: 1;
                     -fx-padding: 25;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <Label text="📌 Event ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                   style="-fx-background-color: white;
                          -fx-background-radius: 8;
                          -fx-border-radius: 8;
                          -fx-border-color: #bdc3c7;
                          -fx-border-width: 1.5;
                          -fx-padding: 10;
                          -fx-font-size: 14px;"/>

        <Label text="📝 Event Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                   style="-fx-background-color: white;
                          -fx-background-radius: 8;
                          -fx-border-radius: 8;
                          -fx-border-color: #bdc3c7;
                          -fx-border-width: 1.5;
                          -fx-padding: 10;
                          -fx-font-size: 14px;"/>
    </GridPane>

    <Button text="🔍 Search" onAction="#searchEvent"
            style="-fx-background-color: black;
                   -fx-text-fill: white;
                   -fx-font-weight: bold;
                   -fx-font-size: 16px;
                   -fx-background-radius: 25;
                   -fx-padding: 12 30;
                   -fx-min-width: 140px;
                   -fx-min-height: 60px;
                   -fx-cursor: hand;">
        <effect>
            <DropShadow color="rgba(52,152,219,0.3)" radius="8"/>
        </effect>
    </Button>

    <VBox fx:id="eventDetailsContainer" spacing="15" visible="false"
          style="-fx-background-color: rgba(216,216,216,0.34);
                 -fx-background-radius: 15;
                 -fx-border-radius: 15;
                 -fx-border-color: rgba(0,0,0,0.1);
                 -fx-border-width: 1;
                 -fx-padding: 25;
                 -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
        <Label text="📋 Event Details"
               style="-fx-font-weight: bold;
                      -fx-font-size: 20px;
                      -fx-text-fill: white;
                      -fx-padding: 5;"/>

