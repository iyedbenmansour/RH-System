<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.effect.Glow?>

<VBox spacing="20" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.pidev.controller.SearchEventController"
      style="-fx-background-color: linear-gradient(to bottom right, #ecf0f1, #d0d3d4);
             -fx-padding: 30;
             -fx-pref-width: 1200;
             -fx-pref-height: 700;">

    <!-- Title Label with Modern Look -->
    <Label text="🔍 Search Event"
           style="-fx-font-size: 26px;
                  -fx-text-fill: linear-gradient(to right, #2c3e50, #3498db);
                  -fx-font-family: 'Arial';
                  -fx-font-weight: bold;
                  -fx-padding: 10;">
        <effect>
            <Glow level="0.8"/>
            <DropShadow color="rgba(0,0,0,0.3)" radius="5" spread="0.2"/>
        </effect>
    </Label>

    <!-- Search Form -->
    <GridPane hgap="15" vgap="15"
              style="-fx-background-color: rgba(255,255,255,0.98);
                     -fx-background-radius: 15;
                     -fx-border-radius: 15;
                     -fx-border-color: rgba(0,0,0,0.1);
                     -fx-border-width: 1;
                     -fx-padding: 25;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <Label text="📌 Event ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                   style="-fx-background-color: white;
                          -fx-background-radius: 8;
                          -fx-border-radius: 8;
                          -fx-border-color: #bdc3c7;
                          -fx-border-width: 1.5;
                          -fx-padding: 10;
                          -fx-font-size: 14px;"/>

        <Label text="📝 Event Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                   style="-fx-background-color: white;
                          -fx-background-radius: 8;
                          -fx-border-radius: 8;
                          -fx-border-color: #bdc3c7;
                          -fx-border-width: 1.5;
                          -fx-padding: 10;
                          -fx-font-size: 14px;"/>
    </GridPane>

    <!-- Search Button with Hover Effects -->
    <Button text="🔍 Search" onAction="#searchEvent"
            style="-fx-background-color: linear-gradient(to right, #3498db, #2980b9);
                   -fx-text-fill: white;
                   -fx-font-weight: bold;
                   -fx-font-size: 16px;
                   -fx-background-radius: 25;
                   -fx-padding: 12 30;
                   -fx-min-width: 140px;
                   -fx-min-height: 40px;
                   -fx-cursor: hand;">
        <effect>
            <DropShadow color="rgba(52,152,219,0.3)" radius="8"/>
        </effect>
    </Button>

    <!-- Event Details Section -->
    <VBox fx:id="eventDetailsContainer" spacing="15" visible="false"
          style="-fx-background-color: rgba(255,255,255,0.98);
                 -fx-background-radius: 15;
                 -fx-border-radius: 15;
                 -fx-border-color: rgba(0,0,0,0.1);
                 -fx-border-width: 1;
                 -fx-padding: 25;
                 -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <Label text="📋 Event Details"
               style="-fx-font-weight: bold;
                      -fx-font-size: 20px;
                      -fx-text-fill: #2c3e50;
                      -fx-padding: 5;"/>

        <GridPane hgap="15" vgap="15">
            <Label text="📌 Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="nameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="📖 Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="descriptionLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="📆 Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="dateLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="📍 Location:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="locationLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="👤 Organiser:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="organiserLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="🎭 Event Type:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Label fx:id="eventTypeLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="👥 Participants:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <Label fx:id="nbParticipantLabel" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="💰 Ticket Price:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <Label fx:id="ticketPriceLabel" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
        </GridPane>
    </VBox>

</VBox>
