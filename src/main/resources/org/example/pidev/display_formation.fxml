<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.effect.DropShadow?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.pidev.controller.DisplayFormationController"
      alignment="CENTER"
      style="-fx-background-color: linear-gradient(to bottom right, #ecf0f1, #bdc3c7);
             -fx-padding: 40;
             -fx-border-radius: 15px;
             -fx-border-width: 1px;
             -fx-pref-width: 900;
             -fx-pref-height: 500;
             -fx-border-color: rgba(0, 0, 0, 0.1);
             -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.15), 15, 0, 0, 5);">

    <Label text="Formation Details"
           style="-fx-font-size: 28px;
                  -fx-text-fill: #2c3e50;
                  -fx-font-family: 'Arial';
                  -fx-font-weight: bold;
                  -fx-padding: 10;"/>

    <VBox spacing="15" style="-fx-background-color: #ffffff;
                              -fx-padding: 20;
                              -fx-border-radius: 15px;
                              -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);">
        <HBox spacing="10" style="-fx-padding: 5;">
            <Label text="📌 Title:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="titleLabel" style="-fx-text-fill: #34495e;"/>
        </HBox>

        <HBox spacing="10" style="-fx-padding: 5;">
            <Label text="📝 Description:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="descriptionLabel" style="-fx-text-fill: #34495e;"/>
        </HBox>

        <HBox spacing="10" style="-fx-padding: 5;">
            <Label text="⏳ Duration:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="durationLabel" style="-fx-text-fill: #34495e;"/>
        </HBox>

        <HBox spacing="10" style="-fx-padding: 5;">
            <Label text="💰 Price:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="priceLabel" style="-fx-text-fill: #34495e;"/>
        </HBox>

        <HBox spacing="10" style="-fx-padding: 5;">
            <Label text="📂 Type:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="typeLabel" style="-fx-text-fill: #34495e;"/>
        </HBox>

        <HBox spacing="10" style="-fx-padding: 5;">
            <Label text="🎓 Trainer:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="trainerLabel" style="-fx-text-fill: #34495e;"/>
        </HBox>

        <HBox spacing="10" style="-fx-padding: 5;">
            <Label text="👥 Participants:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="participantsLabel" style="-fx-text-fill: #34495e;"/>
        </HBox>

        <HBox spacing="10" style="-fx-padding: 5;">
            <Label text="📌 Status:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="statusLabel" style="-fx-text-fill: #34495e;"/>
        </HBox>
    </VBox>

    <HBox spacing="30" alignment="CENTER" style="-fx-padding: 20;">
        <Button text="Update Formation" fx:id="updateButton" onAction="#handleUpdateFormation"
                style="-fx-background-color: linear-gradient(to right, #2ecc71, #27ae60);
                       -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 25px;
                       -fx-padding: 12 35; -fx-font-weight: bold;">
            <effect>
                <DropShadow color="rgba(46,204,113,0.3)" radius="8"/>
            </effect>
        </Button>
        <Button text="Delete Formation" fx:id="deleteButton" onAction="#handleDeleteFormation"
                style="-fx-background-color: linear-gradient(to right, #e74c3c, #c0392b);
                       -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 25px;
                       -fx-padding: 12 35; -fx-font-weight: bold;">
            <effect>
                <DropShadow color="rgba(231,76,60,0.3)" radius="8"/>
            </effect>
        </Button>
    </HBox>

</VBox>
