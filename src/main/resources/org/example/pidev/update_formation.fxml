<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.pidev.controller.UpdateFormationController"
      style="-fx-background-color: linear-gradient(to bottom right, #ecf0f1, #dfe6e9); -fx-padding: 40px; -fx-alignment: center;" spacing="25">

    <Label text="Update Formation"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2d3e50; -fx-font-family: 'Arial'; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 10, 0.0, 0, 5); -fx-padding: 20px;"/>

    <VBox spacing="20" style="-fx-alignment: center;">

        <HBox spacing="20" style="-fx-alignment: center;">
            <Label text="📌 Title:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <TextField fx:id="titreField" style="-fx-font-size: 14px; -fx-background-color: #f1f3f6; -fx-border-radius: 8px; -fx-border-color: #dcdfe2; -fx-padding: 10px 15px; -fx-pref-width: 300px;"/>
        </HBox>

        <HBox spacing="20" style="-fx-alignment: center;">
            <Label text="📝 Description:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <TextArea fx:id="descriptionField" style="-fx-font-size: 14px; -fx-background-color: #f1f3f6; -fx-border-radius: 8px; -fx-border-color: #dcdfe2; -fx-padding: 10px 15px; -fx-pref-height: 100px; -fx-pref-width: 300px;"/>
        </HBox>

        <HBox spacing="20" style="-fx-alignment: center;">
            <Label text="⏳ Duration:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <TextField fx:id="dureeField" style="-fx-font-size: 14px; -fx-background-color: #f1f3f6; -fx-border-radius: 8px; -fx-border-color: #dcdfe2; -fx-padding: 10px 15px; -fx-pref-width: 300px;"/>
        </HBox>

        <HBox spacing="20" style="-fx-alignment: center;">
            <Label text="💰 Price:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <TextField fx:id="prixField" style="-fx-font-size: 14px; -fx-background-color: #f1f3f6; -fx-border-radius: 8px; -fx-border-color: #dcdfe2; -fx-padding: 10px 15px; -fx-pref-width: 300px;"/>
        </HBox>

        <HBox spacing="20" style="-fx-alignment: center;">
            <Label text="📂 Type:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <TextField fx:id="typeField" style="-fx-font-size: 14px; -fx-background-color: #f1f3f6; -fx-border-radius: 8px; -fx-border-color: #dcdfe2; -fx-padding: 10px 15px; -fx-pref-width: 300px;"/>
        </HBox>

        <HBox spacing="20" style="-fx-alignment: center;">
            <Label text="🎓 Trainer:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <TextField fx:id="formateurField" style="-fx-font-size: 14px; -fx-background-color: #f1f3f6; -fx-border-radius: 8px; -fx-border-color: #dcdfe2; -fx-padding: 10px 15px; -fx-pref-width: 300px;"/>
        </HBox>

        <HBox spacing="20" style="-fx-alignment: center;">
            <Label text="👥 Participants:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <TextField fx:id="nbParticipantField" style="-fx-font-size: 14px; -fx-background-color: #f1f3f6; -fx-border-radius: 8px; -fx-border-color: #dcdfe2; -fx-padding: 10px 15px; -fx-pref-width: 300px;"/>
        </HBox>

        <HBox spacing="20" style="-fx-alignment: center;">
            <Label text="📌 Status:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <TextField fx:id="statusField" style="-fx-font-size: 14px; -fx-background-color: #f1f3f6; -fx-border-radius: 8px; -fx-border-color: #dcdfe2; -fx-padding: 10px 15px; -fx-pref-width: 300px;"/>
        </HBox>

        <HBox spacing="20" alignment="CENTER" style="-fx-alignment: center;">
            <Button text="Update Formation" onAction="#handleUpdateFormation"
                    style="-fx-background-color: #3498db;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 25px;
                           -fx-padding: 12px 25px;
                           -fx-font-size: 16px;
                           -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0.0, 0, 2);"/>
        </HBox>
    </VBox>
</VBox>
