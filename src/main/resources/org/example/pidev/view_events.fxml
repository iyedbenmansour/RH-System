<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="20" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.pidev.controller.ViewEventsController"
      style="-fx-background-color: linear-gradient(to bottom, #000000, #14257c);
             -fx-padding: 30;
             -fx-pref-width: 1500;
             -fx-pref-height: 800;">

    <Label text="📋 View All Events"
           style="-fx-font-size: 28px;
                  -fx-text-fill: white;
                  -fx-font-family: 'Roboto Light';
                  -fx-font-weight: bold;
                  -fx-padding: 10;">
        <effect>
            <Glow level="0.8"/>
            <DropShadow color="rgba(0,0,0,0.3)" radius="5" spread="0.2"/>
        </effect>
    </Label>

    <TableView fx:id="eventsTable"
                   style="-fx-background-color: rgba(207,207,207,0.53);
                      -fx-background-radius: 15;
                      -fx-border-radius: 15;
                      -fx-border-color: rgba(0,0,0,0.1);
                      -fx-border-width: 1;
                      -fx-padding: 10;
                      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <style>
            .table-row-cell:even {
            -fx-background-color: #ffffff;
            }
            .table-row-cell:odd {
            -fx-background-color: #f8f9fa;
            }
            .table-row-cell:hover {
            -fx-background-color: #d6eaf8;
            }
        </style>

        <columns>
            <TableColumn text="📌 Name" prefWidth="80" fx:id="nameColumn" style="-fx-font-size: 14px;-fx-text-fill: black; -fx-font-family: 'Roboto Light';"/>
            <TableColumn text="📖 Description" prefWidth="150" fx:id="descriptionColumn" style="-fx-font-size: 14px;-fx-text-fill: black; -fx-font-family: 'Roboto Light';"/>
            <TableColumn text="📆 Date" prefWidth="80" fx:id="dateColumn" style="-fx-font-size: 14px;-fx-text-fill: black; -fx-font-family: 'Roboto Light';"/>
            <TableColumn text="📍 Location" prefWidth="80" fx:id="locationColumn" style="-fx-font-size: 14px;-fx-text-fill: black; -fx-font-family: 'Roboto Light';"/>
            <TableColumn text="👤 Organiser" prefWidth="80" fx:id="organiserColumn" style="-fx-font-size: 14px;-fx-text-fill: black; -fx-font-family: 'Roboto Light';"/>
            <TableColumn text="🎭 Event Type" prefWidth="80" fx:id="eventTypeColumn" style="-fx-font-size: 14px;-fx-text-fill: black; -fx-font-family: 'Roboto Light';"/>
            <TableColumn text="👥 Participants" prefWidth="100" fx:id="nbParticipantColumn" style="-fx-font-size: 14px;-fx-text-fill: black; -fx-font-family: 'Roboto Light';"/>
            <TableColumn text="💰 Ticket Price" prefWidth="100" fx:id="ticketPriceColumn" style="-fx-font-size: 14px;-fx-text-fill: black; -fx-font-family: 'Roboto Light';"/>
            <TableColumn text="📚 Formation" prefWidth="80" fx:id="formationColumn" style="-fx-font-size: 14px;-fx-text-fill: black; -fx-font-family: 'Roboto Light';"/>
            <TableColumn text="⚡ Actions" prefWidth="600" fx:id="actionsColumn" style="-fx-text-fill: black; -fx-font-family: 'Roboto Light';"/>
        </columns>
    </TableView>

    <VBox spacing="15" alignment="CENTER">
        <Button text="🔍 Search by ID" onAction="#openSearchEventWindow"
                style="-fx-background-color: #14257c;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-font-size: 16px;
                       -fx-background-radius: 25;
                       -fx-padding: 12 30;
                       -fx-min-width: 160px;
                       -fx-min-height: 40px;
                       -fx-cursor: hand;">
            <effect>
                <DropShadow color="rgba(52,152,219,0.3)" radius="8"/>
            </effect>
        </Button>

        <Button text="🔄 Refresh Events" onAction="#loadEvents"
                style="-fx-background-color: black;
                       -fx-text-fill: #d1d1d3;
                       -fx-font-weight: bold;
                       -fx-font-size: 16px;
                       -fx-background-radius: 25;
                       -fx-padding: 12 30;
                       -fx-min-width: 160px;
                       -fx-min-height: 40px;
                       -fx-cursor: hand;">
            <effect>
                <DropShadow color="rgba(39,174,96,0.3)" radius="8"/>
            </effect>
        </Button>
    </VBox>

</VBox>
