<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pidev.controller.QRCodeWindowController"
      alignment="CENTER" spacing="20" style="-fx-background-color: #f7f7f7; -fx-padding: 20px; -fx-font-family: 'Roboto', sans-serif; -fx-alignment: center;">

    <Label text="QR Code for Event" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #14257c; -fx-padding: 10px 0;"/>

    <ImageView fx:id="qrCodeImageView" style="-fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.4), 5, 0, 2, 2);
                                                   -fx-padding: 20px;
                                                   -fx-background-color: white;
                                                   -fx-border-radius: 15px;
                                                   -fx-border-color: #ccc;
                                                   -fx-border-width: 2px;"/>

    <Label fx:id="eventDetailsLabel" style="-fx-font-size: 14px; -fx-text-fill: #333; -fx-font-weight: bold; -fx-padding: 10px 0; -fx-alignment: center;
                                            -fx-max-width: 400px; -fx-wrap-text: true;"/>
</VBox>
