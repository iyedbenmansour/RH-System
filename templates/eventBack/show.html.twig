<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event {{ event.name }}</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(to right, #6a4cff, #231a6f);
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 100vh;
            flex-direction: column;
            padding: 20px;
        }

        .page-title {
            width:100%;
            text-align: center;
            font-size: 2.7rem;
            color:rgb(255, 255, 255);
            margin: 30px 0px;
            font-weight: 600;
        }

        .form-container {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 800px;
            padding: 40px;
            margin: 0 auto;
        }

        .form-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            font-size: 1.2rem;
            color: #231a6f;
            font-weight: 600;
            display: block;
            margin-bottom: 8px;
        }

        .form-group input, .form-group textarea {
            width: 100%;
            padding: 12px;
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-sizing: border-box;
            background-color: #f9f9f9;
            transition: border-color 0.3s ease;
        }

        .form-group input:focus, .form-group textarea:focus {
            border-color: #231a6f;
            outline: none;
        }

        .form-group textarea {
            height: 120px;
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .form-actions .btn {
            padding: 12px 20px;
            border-radius: 8px;
            color: white;
            font-size: 16px;
            text-decoration: none;
            text-align: center;
            width: 200px;
            transition: background-color 0.3s, transform 0.3s;
        }

        .form-actions .btn:hover {
            transform: scale(1.05);
        }

        .back-btn {
            background: linear-gradient(45deg, #231a6f, #4b3c9e);
        }

        .edit-btn {
            color:black !important;
            background: linear-gradient(45deg,rgb(192, 191, 191),rgb(143, 142, 142));
        }

        .edit-btn:hover {
            background-color: #e67e22;
            transform: scale(1.05);
        }

        .delete-btn {
            background: linear-gradient(45deg, #e74c3c, #c0392b) !important;
        }

        .delete-btn:hover {
            background-color: #c0392b;
            transform: scale(1.05);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .page-title {
                font-size: 2rem;
            }

            .form-group input, .form-group textarea {
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>

    <h1 class="page-title">Event Details</h1>

    <div class="form-container">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="{{ event.name }}" readonly>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" readonly>{{ event.description }}</textarea>
        </div>

        <div class="form-group">
            <label for="date">Date</label>
            <input type="text" id="date" name="date" value="{{ event.date ? event.date|date('Y-m-d') : '' }}" readonly>
        </div>

        <div class="form-group">
            <label for="location">Location</label>
            <input type="text" id="location" name="location" value="{{ event.location }}" readonly>
        </div>

        <div class="form-group">
            <label for="organiser">Organiser</label>
            <input type="text" id="organiser" name="organiser" value="{{ event.organiser }}" readonly>
        </div>

        <div class="form-group">
            <label for="eventType">Event Type</label>
            <input type="text" id="eventType" name="eventType" value="{{ event.eventType }}" readonly>
        </div>

        <div class="form-group">
            <label for="nbParticipant">Participants</label>
            <input type="text" id="nbParticipant" name="nbParticipant" value="{{ event.nbParticipant }}" readonly>
        </div>

        <div class="form-group">
            <label for="ticketPrice">Ticket Price</label>
            <input type="text" id="ticketPrice" name="ticketPrice" value="{{ event.ticketPrice }}" readonly>
        </div>

        <div class="form-group">
            <label for="hasFormation">Has Formation</label>
            <input type="text" id="hasFormation" name="hasFormation" value="{{ event.hasFormation ? 'Yes' : 'No' }}" readonly>
        </div>

        <div class="form-group">
            <label for="formationId">Formation ID</label>
            <input type="text" id="formationId" name="formationId" value="{{ event.formationId }}" readonly>
        </div>

        <div class="form-group">
            <label for="coordinates">Coordinates</label>
            <input type="text" id="coordinates" name="coordinates" value="({{ event.latitude }}, {{ event.longitude }})" readonly>
        </div>

        <div class="form-actions">
            <a href="{{ path('app_event_index') }}" class="btn back-btn"><i class="fas fa-arrow-left"></i> Back to List</a>
            <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn edit-btn"><i class="fas fa-edit"></i> Edit</a>
            <form method="post" action="{{ path('app_event_delete', {'id': event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="inline-form">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                <button class="btn delete-btn"><i class="fas fa-trash-alt"></i> Delete</button>
            </form>
        </div>
    </div>

</body>
</html>
