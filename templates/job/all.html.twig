{% extends 'base.html.twig' %}

{% block title %}Career Bridge | Browse Job Opportunities{% endblock %}

{% block stylesheets %}
<style>
    /* Hero Section Styling */
    .jobs-hero {
        background: linear-gradient(135deg, #083270 0%, #0d6efd 100%);
        padding: 5rem 0 3rem;
        margin-bottom: 4rem;
        position: relative;
        overflow: hidden;
    }
    
    .jobs-hero::after {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 100%;
        height: 70px;
        background: #fff;
        border-radius: 50% 50% 0 0 / 100% 100% 0 0;
    }
    
    .jobs-hero-content {
        max-width: 600px;
        color: white;
        position: relative;
        z-index: 1;
    }
    
    .jobs-hero-title {
        font-weight: 700;
        margin-bottom: 1rem;
        font-size: 2.5rem;
    }
    
    .jobs-hero-desc {
        opacity: 0.9;
        margin-bottom: 2rem;
        font-size: 1.1rem;
    }
    
    /* Search Form Styling */
    .search-form {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        position: relative;
        z-index: 2;
        margin-top: 2rem;
        transform: translateY(30px);
    }
    
    /* Job Card Styling */
    .job-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        overflow: hidden;
        margin-bottom: 1.5rem;
        background: white;
    }
    
    .job-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    }
    
    .job-card-header {
        display: flex;
        align-items: center;
        padding-bottom: 1rem;
        border-bottom: 1px solid #f0f0f0;
    }
    
    .company-logo {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        background-color: rgba(13, 110, 253, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        font-size: 1.5rem;
        color: #0d6efd;
    }
    
    .job-card-content {
        padding: 1.5rem;
    }
    
    .job-tags {
        margin-top: 1rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }
    
    .job-tag {
        background-color: rgba(13, 110, 253, 0.1);
        color: #0d6efd;
        padding: 0.3rem 0.8rem;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 500;
    }
    
    .job-location {
        display: flex;
        align-items: center;
        color: #6c757d;
        margin-bottom: 1rem;
    }
    
    .job-location i {
        margin-right: 0.5rem;
    }
    
    .job-card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.5rem;
        background-color: #f8f9fa;
    }
    
    .view-details-btn {
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .view-details-btn:hover {
        background-color: #0b5ed7;
        transform: translateY(-2px);
    }
    
    .job-date {
        color: #6c757d;
        font-size: 0.85rem;
    }
    
    /* No Jobs Found Section */
    .no-jobs-found {
        background-color: #f8f9fa;
        padding: 4rem 2rem;
        border-radius: 15px;
        text-align: center;
        margin: 2rem 0;
    }
    
    .no-jobs-found i {
        font-size: 3.5rem;
        color: #0d6efd;
        margin-bottom: 1.5rem;
        opacity: 0.7;
    }
    
    /* Pagination Styling */
    .pagination {
        margin-top: 3rem;
        margin-bottom: 3rem;
    }
    
    .pagination .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
    
    .pagination .page-link {
        color: #0d6efd;
        margin: 0 5px;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    /* Form Elements */
    .search-btn {
        background-color: #0d6efd;
        border-color: #0d6efd;
        border-radius: 50px;
        padding: 0.7rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .search-btn:hover {
        background-color: #0b5ed7;
        border-color: #0b5ed7;
        transform: translateY(-2px);
    }
    
    .input-with-icon {
        position: relative;
    }
    
    .input-with-icon i {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
        z-index: 10;
    }
    
    .input-with-icon .form-control {
        padding-left: 2.8rem;
        height: 50px;
        border-radius: 50px;
        border: 1px solid #e0e0e0;
    }
    
    .input-with-icon .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        border-color: #0d6efd;
    }
    
    /* Section styling */
    .section-title {
        margin-bottom: 2rem;
        position: relative;
    }
    
    .section-title h2 {
        position: relative;
        margin-bottom: 15px;
        font-weight: 700;
    }
    
    .section-title h2::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 0;
        width: 70px;
        height: 3px;
        background: #0d6efd;
    }
    
    .section-title span {
        color: #0d6efd;
        font-weight: 600;
        display: inline-block;
        margin-bottom: 8px;
    }
    
    /* Filtering */
    .filters-bar {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1rem;
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .filter-dropdown .dropdown-toggle {
        border-radius: 50px;
        padding: 0.5rem 1.2rem;
    }
    
    .filter-dropdown .dropdown-menu {
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border: none;
        padding: 1rem;
    }
    
    .dropdown-item {
        border-radius: 8px;
        padding: 0.5rem 1rem;
    }
    
    .dropdown-item:hover {
        background-color: rgba(13, 110, 253, 0.1);
    }
    
    .job-count {
        font-size: 1.1rem;
    }
    
    .job-count span {
        font-weight: 700;
        color: #0d6efd;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
        .jobs-hero {
            padding: 4rem 0 6rem;
        }
        
        .search-form {
            padding: 1rem;
        }
        
        .job-card-footer {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
        }
        
        .filters-bar {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
        }
    }
</style>
{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="jobs-hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="jobs-hero-content wow fadeInUp" data-wow-delay=".2s">
                    <h1 class="jobs-hero-title">Discover Your Dream Job</h1>
                    <p class="jobs-hero-desc">
                        Find the perfect opportunity that aligns with your skills and career goals from our curated job listings
                    </p>
                </div>
            </div>
        </div>

        <!-- Search Form -->
        <div class="row">
            <div class="col-lg-12">
                <form action="{{ path('app_jobs_all') }}" method="get" class="search-form wow fadeInUp" data-wow-delay=".3s">
                    <div class="row g-3">
                        <div class="col-md-5">
                            <div class="input-with-icon">
                                <i class="lni lni-search-alt"></i>
                                <input type="text" 
                                       name="q" 
                                       class="form-control" 
                                       placeholder="Job title or keyword" 
                                       value="{{ app.request.query.get('q') }}">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="input-with-icon">
                                <i class="lni lni-map-marker"></i>
                                <input type="text" 
                                       name="location" 
                                       class="form-control" 
                                       placeholder="City, country or remote" 
                                       value="{{ app.request.query.get('location') }}">
                            </div>
                        </div>
                        <div class="col-md-2 d-grid">
                            <button type="submit" class="btn btn-primary search-btn">
                                <i class="lni lni-search-alt me-2"></i> Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <!-- Filters Bar -->
    <div class="filters-bar wow fadeInUp" data-wow-delay=".2s">
        <div class="job-count">
            {% if pagination|length > 0 %}
                <span>{{ pagination.getTotalItemCount }}</span> jobs found
                {% if app.request.query.get('q') or app.request.query.get('location') %}
                    for your search
                {% endif %}
            {% else %}
                <span>0</span> jobs found
            {% endif %}
        </div>
        
        <div class="d-flex gap-3">
            {% if app.request.query.get('q') or app.request.query.get('location') %}
                <a href="{{ path('app_jobs_all') }}" class="btn btn-outline-secondary">
                    <i class="lni lni-reload me-1"></i> Reset filters
                </a>
            {% endif %}
            
            <div class="dropdown filter-dropdown">
                <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="lni lni-sort-amount-dsc me-1"></i> Sort by: Relevance
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Relevance</a></li>
                    <li><a class="dropdown-item" href="#">Date (newest)</a></li>
                    <li><a class="dropdown-item" href="#">Date (oldest)</a></li>
                    <li><a class="dropdown-item" href="#">Company name (A-Z)</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Job Listings Section -->
    <section class="job-listings">
        <div class="section-title wow fadeInUp" data-wow-delay=".2s">
            <span>Available Positions</span>
            <h2>Current Opportunities</h2>
        </div>
        
        <div class="row">
            {% if pagination|length > 0 %}
                {% for job in pagination %}
                    <div class="col-lg-6 wow fadeInUp" data-wow-delay=".{{ loop.index * 0.05 + 0.1 }}s">
                        <div class="job-card">
                            <div class="job-card-content">
                                <div class="job-card-header">
                                    <div class="company-logo">
                                        <i class="lni lni-briefcase"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-1">{{ job.title }}</h5>
                                        <span class="text-muted">Company Name</span>
                                    </div>
                                </div>
                                
                                <div class="mt-3">
                                    <div class="job-location">
                                        <i class="lni lni-map-marker"></i>
                                        <span>{{ job.location }}</span>
                                    </div>
                                    
                                    <p>
                                        {{ job.description|length > 150 ? job.description|slice(0, 150) ~ '...' : job.description }}
                                    </p>
                                    
                                    <div class="job-tags">
                                        <span class="job-tag">Full-time</span>
                                        <span class="job-tag">Remote</span>
                                        <span class="job-tag">{{ job.title|split(' ')|first }}</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="job-card-footer">
                                <div class="job-date">
                                    <i class="lni lni-calendar"></i> Posted 2 days ago
                                </div>
                                <a href="{{ path('app_job_show', { id: job.id }) }}" class="btn btn-primary view-details-btn">
                                    View Details <i class="lni lni-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-12">
                    <div class="no-jobs-found wow fadeInUp" data-wow-delay=".2s">
                        <i class="lni lni-search"></i>
                        <h4>No job listings found</h4>
                        <p class="text-muted mb-4">Try adjusting your search criteria or browse all available jobs.</p>
                        <a href="{{ path('app_jobs_all') }}" class="btn btn-primary">
                            <i class="lni lni-briefcase me-1"></i> View All Jobs
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- Pagination -->
        {% if pagination|length > 0 %}
            <div class="row">
                <div class="col-12">
                    <nav aria-label="Job pagination">
                        <ul class="pagination justify-content-center wow fadeInUp" data-wow-delay=".2s">
                            {% if pagination.currentPageNumber > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_jobs_all', app.request.query.all|merge({page: 1})) }}" aria-label="First">
                                        <i class="lni lni-chevron-double-left"></i>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_jobs_all', app.request.query.all|merge({page: pagination.currentPageNumber - 1})) }}" aria-label="Previous">
                                        <i class="lni lni-chevron-left"></i>
                                    </a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="lni lni-chevron-double-left"></i>
                                    </span>
                                </li>
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="lni lni-chevron-left"></i>
                                    </span>
                                </li>
                            {% endif %}

                            {% set nearbyPagesLimit = 2 %}
                            {% set startPage = max(1, pagination.currentPageNumber - nearbyPagesLimit) %}
                            {% set endPage = min(pagination.pageCount, pagination.currentPageNumber + nearbyPagesLimit) %}

                            {% if startPage > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_jobs_all', app.request.query.all|merge({page: 1})) }}">1</a>
                                </li>
                                {% if startPage > 2 %}
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                {% endif %}
                            {% endif %}

                            {% for i in startPage..endPage %}
                                <li class="page-item {% if i == pagination.currentPageNumber %}active{% endif %}">
                                    <a class="page-link" href="{{ path('app_jobs_all', app.request.query.all|merge({page: i})) }}">{{ i }}</a>
                                </li>
                            {% endfor %}

                            {% if endPage < pagination.pageCount %}
                                {% if endPage < pagination.pageCount - 1 %}
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                {% endif %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_jobs_all', app.request.query.all|merge({page: pagination.pageCount})) }}">{{ pagination.pageCount }}</a>
                                </li>
                            {% endif %}

                            {% if pagination.currentPageNumber < pagination.pageCount %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_jobs_all', app.request.query.all|merge({page: pagination.currentPageNumber + 1})) }}" aria-label="Next">
                                        <i class="lni lni-chevron-right"></i>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_jobs_all', app.request.query.all|merge({page: pagination.pageCount})) }}" aria-label="Last">
                                        <i class="lni lni-chevron-double-right"></i>
                                    </a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="lni lni-chevron-right"></i>
                                    </span>
                                </li>
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="lni lni-chevron-double-right"></i>
                                    </span>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                    
                    <div class="text-center mt-2 mb-5 wow fadeInUp" data-wow-delay=".25s">
                        <span class="text-muted">
                            Showing page {{ pagination.currentPageNumber }} of {{ pagination.pageCount }}
                            ({{ pagination.getTotalItemCount }} total jobs)
                        </span>
                    </div>
                </div>
            </div>
        {% endif %}
    </section>
</div>
{% endblock %}