{% extends 'base.html.twig' %}

{% block title %}Browse Job Opportunities{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-primary mb-1">Job Opportunities</h1>
            <p class="text-muted">Find your next career move from our curated listings</p>
        </div>
    </div>

    <!-- Filters Section -->
    <form action="{{ path('app_jobs_all') }}" method="get" class="row g-3 mb-4">
        <div class="col-md-4">
            <input type="text" 
                   name="q" 
                   class="form-control" 
                   placeholder="Search by job title..." 
                   value="{{ app.request.query.get('q') }}">
        </div>
        <div class="col-md-4">
            <input type="text" 
                   name="location" 
                   class="form-control" 
                   placeholder="Location (e.g. city, country)" 
                   value="{{ app.request.query.get('location') }}">
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">
                <i class="fas fa-search"></i> Search
            </button>
            <a href="{{ path('app_jobs_all') }}" class="btn btn-outline-secondary">
                <i class="fas fa-sync"></i> Reset
            </a>
        </div>
    </form>

    <!-- Job Listings -->
    <div class="row">
        {% if pagination|length > 0 %}
            {% for job in pagination %}
                <div class="col-12 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ job.title }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <i class="fas fa-map-marker-alt"></i> {{ job.location }}
                            </h6>
                            <p class="card-text">
                                {{ job.description|length > 150 ? job.description|slice(0, 150) ~ '...' : job.description }}
                            </p>
                            <a href="{{ path('app_job_show', { id: job.id }) }}" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">No job listings found. Try adjusting your search criteria.</div>
            </div>
        {% endif %}
    </div>

    <!-- Pagination -->
    <div class="row mt-4">
        <div class="col-12">
            <nav aria-label="Job pagination">
                <ul class="pagination justify-content-center">
                    {% if pagination.currentPageNumber > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_jobs_all', app.request.query.all|merge({page: 1})) }}" aria-label="First">
                                <span aria-hidden="true">&laquo;&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_jobs_all', app.request.query.all|merge({page: pagination.currentPageNumber - 1})) }}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <span class="page-link">&laquo;&laquo;</span>
                        </li>
                        <li class="page-item disabled">
                            <span class="page-link">&laquo;</span>
                        </li>
                    {% endif %}

                    {% set nearbyPagesLimit = 2 %}
                    {% set startPage = max(1, pagination.currentPageNumber - nearbyPagesLimit) %}
                    {% set endPage = min(pagination.pageCount, pagination.currentPageNumber + nearbyPagesLimit) %}

                    {% if startPage > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_jobs_all', app.request.query.all|merge({page: 1})) }}">1</a>
                        </li>
                        {% if startPage > 2 %}
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        {% endif %}
                    {% endif %}

                    {% for i in startPage..endPage %}
                        <li class="page-item {% if i == pagination.currentPageNumber %}active{% endif %}">
                            <a class="page-link" href="{{ path('app_jobs_all', app.request.query.all|merge({page: i})) }}">{{ i }}</a>
                        </li>
                    {% endfor %}

                    {% if endPage < pagination.pageCount %}
                        {% if endPage < pagination.pageCount - 1 %}
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        {% endif %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_jobs_all', app.request.query.all|merge({page: pagination.pageCount})) }}">{{ pagination.pageCount }}</a>
                        </li>
                    {% endif %}

                    {% if pagination.currentPageNumber < pagination.pageCount %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_jobs_all', app.request.query.all|merge({page: pagination.currentPageNumber + 1})) }}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_jobs_all', app.request.query.all|merge({page: pagination.pageCount})) }}" aria-label="Last">
                                <span aria-hidden="true">&raquo;&raquo;</span>
                            </a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <span class="page-link">&raquo;</span>
                        </li>
                        <li class="page-item disabled">
                            <span class="page-link">&raquo;&raquo;</span>
                        </li>
                    {% endif %}
                </ul>
            </nav>
            
            <div class="text-center text-muted mt-2">
                Showing page {{ pagination.currentPageNumber }} of {{ pagination.pageCount }}
            </div>
        </div>
    </div>
</div>

<style>
    .pagination .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: white;
    }
    
    .pagination .page-link {
        color: #0d6efd;
        margin: 0 4px;
        border-radius: 4px;
        min-width: 38px;
        text-align: center;
    }
    
    .pagination .page-link:hover {
        background-color: #e9ecef;
    }
    
    .pagination .page-item.disabled .page-link {
        color: #6c757d;
    }
</style>
{% endblock %}