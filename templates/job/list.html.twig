{% extends 'baseBack.html.twig' %}

{% block title %}Job Listings{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Job Listings</h1>
        
        {# Filter Form (with hidden company_id) #}
        <form id="filterForm" method="get" action="{{ path('app_job_list') }}">
            <input type="hidden" id="company_id" name="company_id" value="{{ company_id }}">
        </form>

        {# Flash Messages #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {# Results Info #}
        {% if company_id %}
            <div class="alert alert-info mb-4">
                Showing jobs :</strong>
                <span class="badge bg-secondary ms-2">{{ jobs|length }} jobs found</span>
            </div>
        {% endif %}
        
        {# Jobs Table #}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Position</th>
                        <th>Location</th>
                        <th>Posted Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for job in jobs %}
                        <tr>
                            <td>{{ job.title }}</td>
                            <td>{{ job.position }}</td>
                            <td>{{ job.location }}</td>
                            <td>{{ job.postedDate|date('Y-m-d H:i') }}</td>
                            <td>
                                <a href="{{ path('app_job_edit', {'id': job.id}) }}" 
                                   class="btn btn-sm btn-outline-primary">Edit</a>
                                <form method="post" action="{{ path('app_job_delete', {'id': job.id}) }}" 
                                      class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this job?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job.id) }}">
                                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                {% if company_id %}
                                    No jobs found for Company ID: {{ company_id }}
                                {% else %}
                                    <div class="text-muted">
                                        <i class="bi bi-info-circle fs-4"></i>
                                        <p class="mt-2">No Company ID set. Please set Company ID in local storage.</p>
                                    </div>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        
    </div>

    {# JavaScript for Local Storage Integration #}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const companyIdInput = document.getElementById('company_id');
            const filterForm = document.getElementById('filterForm');

            // Get company_id from localStorage if not present in form
            const storedCompanyId = localStorage.getItem('company_id');
            if (!companyIdInput.value && storedCompanyId) {
                companyIdInput.value = storedCompanyId;
                filterForm.submit();
            }

            // Save company_id to localStorage when form submits (for future reloads)
            filterForm.addEventListener('submit', function() {
                if (companyIdInput.value) {
                    localStorage.setItem('company_id', companyIdInput.value);
                }
            });
        });
    </script>
{% endblock %}