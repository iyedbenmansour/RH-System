{% extends 'baseBack.html.twig' %}

{% block title %}Job Listings{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Job Listings</h1>
        
        {# Filter Form #}
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" action="{{ path('app_job_list') }}" class="row g-3 align-items-center">
                    <div class="col-md-4">
                        <label for="company_id" class="form-label">Company ID</label>
                        <input type="number" id="company_id" name="company_id" class="form-control" 
                               placeholder="Enter Company ID" value="{{ company_id }}">
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">Filter</button>
                        <a href="{{ path('app_job_list') }}" class="btn btn-outline-secondary">Clear</a>
                    </div>
                </form>
            </div>
        </div>

        {# Flash Messages #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {# Results Info #}
        {% if company_id %}
            <div class="alert alert-info mb-4">
                Showing jobs for Company ID: <strong>{{ company_id }}</strong>
                <span class="badge bg-secondary ms-2">{{ jobs|length }} jobs found</span>
            </div>
        {% endif %}
        
        {# Jobs Table #}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Position</th>
                        <th>Location</th>
                        <th>Posted Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for job in jobs %}
                        <tr>
                            <td>{{ job.title }}</td>
                            <td>{{ job.position }}</td>
                            <td>{{ job.location }}</td>
                            <td>{{ job.postedDate|date('Y-m-d H:i') }}</td>
                            <td>
                                <a href="{{ path('app_job_edit', {'id': job.id}) }}" 
                                   class="btn btn-sm btn-outline-primary">Edit</a>
                                
                                <form method="post" action="{{ path('app_job_delete', {'id': job.id}) }}" 
                                      class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this job?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job.id) }}">
                                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                {% if company_id %}
                                    No jobs found for Company ID: {{ company_id }}
                                {% else %}
                                    <div class="text-muted">
                                        <i class="bi bi-info-circle fs-4"></i>
                                        <p class="mt-2">Please enter a Company ID to view jobs</p>
                                    </div>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {# Add New Button #}
        <div class="mt-4">
            <a href="{{ path('app_job_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Job
            </a>
        </div>
    </div>
{% endblock %}