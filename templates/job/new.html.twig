{% extends 'baseBack.html.twig' %}

{% block title %}Post New Job{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Post New Job</h1>
        
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_row(form.title) }}
                    {{ form_row(form.description) }}
                    <div style="display: none;">
                        {{ form_row(form.companyId) }}
                    </div>
                    {{ form_row(form.position) }}
                    {{ form_row(form.location) }}
                    {{ form_row(form.postedDate) }}
                    
                    <button type="submit" class="btn btn-primary">Submit Job</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Try to find the companyId field by its id or name
            // Symfony commonly renders id="form_companyId" for the field
            const companyIdInput = document.getElementById('form_companyId') || document.querySelector('[name$="[companyId]"]');
            const storedCompanyId = localStorage.getItem('company_id');
            if (companyIdInput && storedCompanyId) {
                companyIdInput.value = storedCompanyId;
            }
        });
    </script>
{% endblock %}