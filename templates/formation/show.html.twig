{% extends 'base.html.twig' %}

{% block title %}
    Formation {{ formation.titre }}
{% endblock %}

{% block body %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@300;400;500;600&display=swap');

        body, .container, .form-container, .form-label, .form-control, .btn {
            font-family: 'Be Vietnam Pro', sans-serif;
        }

        .container {
            max-width: 1000px; /* Increased width */
            margin: 0 auto;
            padding: 40px;
        }

        .page-title {
            font-size: 2.5em;
            font-weight: 600;
            margin-bottom: 30px;
            color: #4B4B4B;
        }

        .form-container {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 100%; /* Take up full width of container */
        }

        .form-group {
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            width: 100%; /* Ensure full width for each form group */
        }

        .form-group label {
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
            color: #333;
        }

        .form-control {
            width: 100%; /* Full width of the container */
            padding: 12px;
            margin: 8px 0;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: #f4f4f4;
            font-size: 1rem;
            color: #555;
            height: 40px;
            box-sizing: border-box;
            display: block;
        }

        .form-control[readonly] {
            background-color: #e9ecef;
            cursor: not-allowed;
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .form-actions a, .form-actions button {
            display: inline-block;
            padding: 12px 20px;
            border-radius: 5px;
            font-size: 1rem;
            text-align: center;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007BFF;
            color: white;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: none;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            border: none;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }
    </style>

    <div class="container">
        <h1 class="page-title">Formation Details</h1>

        <div class="form-container">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" value="{{ formation.titre }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" readonly class="form-control">{{ formation.description }}</textarea>
            </div>

            <div class="form-group">
                <label for="duration">Duration</label>
                <input type="text" id="duration" value="{{ formation.duree }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="price">Price</label>
                <input type="text" id="price" value="{{ formation.prix }} DT" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="type">Type</label>
                <input type="text" id="type" value="{{ formation.type }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="trainer">Trainer</label>
                <input type="text" id="trainer" value="{{ formation.formateur }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="participants">Participants</label>
                <input type="text" id="participants" value="{{ formation.nbparticipant }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="status">Status</label>
                <input type="text" id="status" value="{{ formation.status }}" readonly class="form-control">
            </div>

            <div class="form-actions">
                <a href="{{ path('app_event_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
            </div>
        </div>
    </div>
{% endblock %}
