{% extends 'baseBack.html.twig' %}

{% block title %}Formation {{ formation.titre }}{% endblock %}

{% block body %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@300;400;500;600&display=swap');

        body, .wrapper, .form-container, .form-label, .form-control, .btn {
            font-family: 'Be Vietnam Pro', sans-serif;
        }

        .wrapper {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px;
        }

        .page-title {
            font-size: 2.5em;
            font-weight: 600;
            margin-bottom: 30px;
            color: #4B4B4B;
        }

        .form-container {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            width: 100% !important;  /* Force full width for each form group */
            clear: both !important;  /* Ensure no floating elements disrupt layout */
            position: relative !important;  /* Ensure the form-group is relative to control absolute elements inside it */
        }

        .form-group label {
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
            color: #333;
        }

        .form-control {
            width: 100% !important;
            padding: 12px !important;
            margin: 8px 0 !important;
            border: 1px solid #ddd !important;
            border-radius: 4px !important;
            background-color: #f4f4f4 !important;
            font-size: 1rem !important;
            color: #555 !important;
            height: 40px !important;  /* Ensures uniform height for all input fields */
            box-sizing: border-box !important;  /* Ensures proper box sizing for padding and borders */
            display: block !important;
        }

        .form-control[readonly] {
            background-color: #e9ecef !important;
            cursor: not-allowed !important;
        }

        .form-control textarea {
            height: 120px !important;  /* Ensures textarea has enough height */
            resize: vertical !important;
        }

        .btn {
            padding: 12px 20px !important;
            border-radius: 5px !important;
            font-size: 1rem !important;
            text-decoration: none !important;
            text-align: center !important;
            cursor: pointer !important;
        }

        .btn-primary {
            background-color: #007BFF !important;
            color: white !important;
            border: none !important;
        }

        .btn-primary:hover {
            background-color: #0056b3 !important;
        }

        .btn-secondary {
            background-color: #6c757d !important;
            color: white !important;
            border: none !important;
        }

        .btn-secondary:hover {
            background-color: #5a6268 !important;
        }

        .btn-danger {
            background-color: #dc3545 !important;
            color: white !important;
            border: none !important;
        }

        .btn-danger:hover {
            background-color: #c82333 !important;
        }

        .form-actions {
            display: flex !important;
            justify-content: space-between !important;
            margin-top: 20px !important;
        }

        .form-actions a, .form-actions button {
            display: inline-block !important;
            padding: 12px 20px !important;
            border-radius: 5px !important;
            font-size: 1rem !important;
        }

        .form-actions i {
            margin-right: 8px !important;
        }

        .inline-form {
            display: inline !important;
        }

        .back-btn {
            background-color: #f8f9fa !important;
            color: #007BFF !important;
            text-align: center !important;
            text-decoration: none !important;
        }

        .edit-btn {
            background-color: #ffc107 !important;
            color: #fff !important;
        }

        .edit-btn:hover {
            background-color: #e0a800 !important;
        }

        .delete-btn {
            background-color: #dc3545 !important;
            color: #fff !important;
        }

        .delete-btn:hover {
            background-color: #c82333 !important;
        }
    </style>

    <div class="wrapper">
        <h1 class="page-title">Formation Details</h1>

        <div class="form-container">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" value="{{ formation.titre }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" readonly class="form-control">{{ formation.description }}</textarea>
            </div>

            <div class="form-group">
                <label for="duration">Duration</label>
                <input type="text" id="duration" value="{{ formation.duree }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="price">Price</label>
                <input type="text" id="price" value="{{ formation.prix }} DT" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="type">Type</label>
                <input type="text" id="type" value="{{ formation.type }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="trainer">Trainer</label>
                <input type="text" id="trainer" value="{{ formation.formateur }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="participants">Participants</label>
                <input type="text" id="participants" value="{{ formation.nbparticipant }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="status">Status</label>
                <input type="text" id="status" value="{{ formation.status }}" readonly class="form-control">
            </div>

            <div class="form-actions">
                <a href="{{ path('app_event_index_back') }}" class="btn back-btn"><i class="fas fa-arrow-left"></i> Back to List</a>
                <a href="/formationBack/{{ formation.id }}/edit" class="btn edit-btn"><i class="fas fa-edit"></i> Edit</a>
                <form method="post" action="{{ path('app_formation_delete_back', {'id': formation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="inline-form">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formation.id) }}">
                    <button class="btn delete-btn"><i class="fas fa-trash-alt"></i> Delete</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
