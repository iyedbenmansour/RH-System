{# templates/admin/company_employees.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Employés de {{ company.companyName }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
    :root {
        --primary-color: #4361ee;
        --secondary-color: #3f37c9;
        --light-color: #f8f9fa;
        --dark-color: #212529;
        --gray-color: #6c757d;
    }
    
    .page-header {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 2rem;
    }
    
    .employee-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 1.5rem;
        margin-bottom: 2rem;
    }
    
    .back-link {
        margin-bottom: 1.5rem;
    }
    
    .back-link .btn {
        border-radius: 6px;
        padding: 0.5rem 1rem;
    }
    
    .table-responsive {
        border-radius: 8px;
        overflow: hidden;
    }
    
    .table {
        margin-bottom: 0;
    }
    
    .table thead th {
        background-color: rgba(67, 97, 238, 0.1);
        color: var(--dark-color);
        font-weight: 600;
        border-top: none;
        padding: 1rem;
    }
    
    .table tbody td {
        padding: 1rem;
        vertical-align: middle;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(67, 97, 238, 0.03);
    }
    
    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: var(--light-color);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-right: 10px;
        color: var(--primary-color);
        font-weight: bold;
    }
    
    .user-info {
        display: flex;
        align-items: center;
    }
    
    .job-id {
        background-color: rgba(67, 97, 238, 0.1);
        color: var(--primary-color);
        padding: 0.35em 0.65em;
        border-radius: 50rem;
        font-size: 0.875rem;
    }
    
    .no-employees {
        padding: 2rem;
        text-align: center;
        color: var(--gray-color);
    }
    
    .no-employees i {
        font-size: 3rem;
        color: #dee2e6;
        margin-bottom: 1rem;
    }
    
    .actions .btn {
        margin-right: 5px;
    }
    
    @media (max-width: 768px) {
        .table-responsive {
            border: 1px solid #dee2e6;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="back-link">
        <a href="{{ path('admin_dashboard') }}" class="btn btn-light">
            <i class="fas fa-arrow-left me-2"></i> Retour au tableau de bord
        </a>
    </div>

    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="fas fa-users me-2"></i> Employés de {{ company.companyName }}
            </h1>
            <span class="badge bg-light text-dark">
                {{ employees|length }} employé(s)
            </span>
        </div>
    </div>

    <div class="employee-card">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Poste</th>
                    </tr>
                </thead>
                <tbody>
                    {% for employee in employees %}
                    <tr>
                        <td>
                            <div class="user-info">
                                <div class="user-avatar">
                                    {{ employee.user.name|first|upper }}
                                </div>
                                {{ employee.user.name }}
                            </div>
                        </td>
                        <td>{{ employee.user.email }}</td>
                        <td>
                            {% if employee.jobId %}
                                <span class="job-id">ID: {{ employee.jobId }}</span>
                            {% else %}
                                <span class="text-muted">Non spécifié</span>
                            {% endif %}
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="3">
                            <div class="no-employees">
                                <i class="fas fa-user-slash"></i>
                                <p>Aucun employé trouvé pour cette entreprise</p>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Animation pour le tableau
        const rows = document.querySelectorAll('tbody tr');
        rows.forEach((row, index) => {
            row.style.opacity = '0';
            row.style.transform = 'translateX(-20px)';
            row.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
            
            setTimeout(() => {
                row.style.opacity = '1';
                row.style.transform = 'translateX(0)';
            }, 100 * index);
        });
    });
</script>
{% endblock %}