{% extends 'base.html.twig' %}

{% block title %}
    Event {{ event.name }}
{% endblock %}

{% block body %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@300;400;500;600&display=swap');

        body, .container, .form-container, .form-label, .form-control, .btn {
            font-family: 'Be Vietnam Pro', sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px;
        }

        .page-title {
            font-size: 2.5em;
            font-weight: 600;
            margin-bottom: 30px;
            color: #4B4B4B;
        }

        .form-container {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .form-group label {
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
            color: #333;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            margin: 8px 0;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: #f4f4f4;
            font-size: 1rem;
            color: #555;
            height: 40px;
            box-sizing: border-box;
            display: block;
        }

        .form-control[readonly] {
            background-color: #e9ecef;
            cursor: not-allowed;
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .btn {
            padding: 12px 20px;
            border-radius: 5px;
            font-size: 1rem;
            text-decoration: none;
            text-align: center;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007BFF;
            color: white;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: none;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            border: none;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }
    </style>

    <div class="container">
        <h1 class="page-title">Event Details</h1>

        <div class="form-container">
            
            <!-- Event Information -->
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" value="{{ event.name }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" readonly class="form-control">{{ event.description }}</textarea>
            </div>

            <div class="form-group">
                <label for="date">Date</label>
                <input type="text" id="date" value="{{ event.date ? event.date|date('Y-m-d') : 'N/A' }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="location">Location</label>
                <input type="text" id="location" value="{{ event.location }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="organiser">Organiser</label>
                <input type="text" id="organiser" value="{{ event.organiser }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="eventType">Event Type</label>
                <input type="text" id="eventType" value="{{ event.eventType }}" readonly class="form-control">
            </div>

            <!-- Participants & Price -->
            <div class="form-group">
                <label for="participants">Participants</label>
                <input type="text" id="participants" value="{{ event.nbParticipant }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="ticketPrice">Ticket Price</label>
                <input type="text" id="ticketPrice" value="{{ event.ticketPrice }} DT" readonly class="form-control">
            </div>

            <!-- Formation Details -->
            <div class="form-group">
                <label for="hasFormation">Has Formation</label>
                <input type="text" id="hasFormation" value="{{ event.hasFormation ? 'Yes' : 'No' }}" readonly class="form-control">
            </div>

            <div class="form-group">
                <label for="formationId">Formation ID</label>
                <input type="text" id="formationId" value="{{ event.formationId }}" readonly class="form-control">
            </div>

            <!-- Coordinates -->
            <div class="form-group">
                <label for="coordinates">Coordinates</label>
                <input type="text" id="coordinates" value="({{ event.latitude }}, {{ event.longitude }})" readonly class="form-control">
            </div>

            <!-- Action Buttons -->
            <div class="form-actions">
                <a href="{{ path('app_event_index') }}" class="btn btn-secondary back-btn"><i class="fas fa-arrow-left"></i> Back to List</a>
                <a href="{% if event.hasFormation %}{{ path('app_formation_show', {'id': event.formationId}) }}{% else %}#{% endif %}" class="btn btn-primary display-btn" {% if not event.hasFormation %}style="pointer-events: none; opacity: 0.5;"{% endif %}><i class="fas fa-chalkboard-teacher"></i> Display Formation</a>
            </div>
        </div>
    </div>

{% endblock %}
