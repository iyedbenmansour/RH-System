{% extends 'base.html.twig' %}

{% block title %}Event Carousel{% endblock %}

{% block body %}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@300;400;500;600&display=swap');

    body {
        font-family: 'Be Vietnam Pro', sans-serif;
        background-color: #f8fafc;
        margin: 0;
        padding: 0;
    }

    .carousel-wrapper {
        max-width: 1200px;
        margin: 50px auto 0 auto;
        padding: 0 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    #carousel-events-container {
        display: flex;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        gap: 40px;
        padding-bottom: 30px;
        scrollbar-width: none;
    }

    #carousel-events-container::-webkit-scrollbar {
        display: none;
    }

    .event-card {
        scroll-snap-align: center;
        flex: 0 0 auto;
        width: 450px;
        position: relative;
    }

    .card {
        background: linear-gradient(135deg, #ffffff, #f1f3f5);
        border-radius: 20px;
        padding: 30px 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    }

    .card-title {
        font-size: 28px;
        font-weight: bold;
        color: #2d3748;
        margin-bottom: 15px;
        text-align: center;
    }

    .card-text {
        font-size: 16px;
        color: #4a5568;
        margin-bottom: 10px;
        text-align: center;
    }

    .btn-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 14px;
        font-weight: 600;
        text-transform: uppercase;
        border-radius: 30px;
        transition: all 0.3s ease;
        text-decoration: none;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        color: #fff;
        border: none;
        display: inline-block;
    }
    #calendar-view-btn {
    background-color: #4299e1; /* nice blue */
    color: white;
    padding: 12px 24px;
    font-size: 16px;
    font-weight: 600;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
    box-shadow: 0 4px 12px rgba(66, 153, 225, 0.3);
    margin: 30px auto;
    display: block;
}

#calendar-view-btn:hover {
    background-color: #2b6cb0;
    transform: translateY(-2px);
}

    .show-btn { background: #38a169; }
    .show-btn:hover { background: #2f855a; transform: scale(1.05); }

    .display-btn { background: #4299e1; }
    .display-btn:hover { background: #2b6cb0; transform: scale(1.05); }

    .maps-btn { background: #ed8936; }
    .maps-btn:hover { background: #dd6b20; transform: scale(1.05); }

    .qr-btn { background: #9f7aea; }
    .qr-btn:hover { background: #6b46c1; transform: scale(1.05); }

    #search-bar {
        width: 90%;
        max-width: 500px;
        padding: 14px 22px;
        border: 2px solid #ddd;
        border-radius: 30px;
        font-size: 16px;
        margin: 30px auto;
        display: block;
        outline: none;
        transition: 0.3s;
    }

    #search-bar:focus {
        border-color: #4299e1;
        box-shadow: 0 0 8px rgba(66, 153, 225, 0.3);
    }

    .no-results {
        text-align: center;
        color: #999;
        font-size: 18px;
        margin-top: 20px;
        display: none;
    }

    .qr-modal {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .qr-modal-content {
        background: #fff;
        padding: 25px;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    }

    .qr-modal img {
        max-width: 220px;
    }

    .swipe-text {
        text-align: center;
        font-size: 18px;
        font-weight: 600;
        margin-top: 30px;
        color: #718096;
    }
    .close-calendar-btn {
    margin-top: 20px;
    background-color: #e53e3e;
    color: white;
    padding: 10px 20px;
    border: none;
    font-weight: 600;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
}

.close-calendar-btn:hover {
    background-color: #c53030;
    transform: translateY(-2px);
}
/* FullCalendar general styles */
#calendar-holder {
    background: white;
    padding: 20px;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    margin-top: 30px;
}

/* Toolbar */
.fc-toolbar-title {
    font-size: 26px;
    font-weight: bold;
    color: #2d3748;
}

.fc-toolbar-chunk button {
    background-color: #4299e1;
    border: none;
    color: white;
    padding: 6px 12px;
    border-radius: 6px;
    font-weight: 600;
    transition: 0.3s;
}

.fc-toolbar-chunk button:hover {
    background-color: #2b6cb0;
}

/* Button active */
.fc-button-active {
    background-color: #2b6cb0 !important;
}

/* Calendar grid */
.fc-daygrid-day-number {
    font-weight: 600;
    color: #4a5568;
}

/* Event styles */
.fc-event {
    background-color: #38b2ac;
    color: white;
    border: none;
    padding: 5px;
    font-size: 14px;
    border-radius: 6px;
    transition: background-color 0.3s ease;
}

.fc-event:hover {
    background-color: #319795;
}

/* Day cells */
.fc-daygrid-day {
    background-color: #f7fafc;
    transition: background 0.3s;
}

.fc-daygrid-day:hover {
    background-color: #edf2f7;
}

/* Today cell */
.fc-day-today {
    background: #bee3f8;
    font-weight: bold;
}

/* View switch buttons (month/week/day) */
.fc-button-group > .fc-button {
    margin: 0 2px;
}

/* Make calendar responsive */
@media (max-width: 768px) {
    #calendar-holder {
        padding: 10px;
    }
    .fc-toolbar-title {
        font-size: 20px;
    }
    
}


</style>

<!-- Calendar Button -->
<button id="calendar-view-btn">See Calendar</button>

<!-- Calendar holder -->
<div id="calendar-holder" 
     data-events="{{ events|map(event => {
         'id': event.id,
         'name': event.name|e('js'),
         'date': event.date ? event.date|date('Y-m-d') : ''
     })|json_encode|e('html_attr') }}">
</div>
<div id="calendar-close-holder" style="text-align: center; margin-top: 15px;"></div>

<!-- Search Bar -->
<div class="search-container">
    <input type="text" id="search-bar" placeholder="Search events by name, location, organizer, type..." autocomplete="off">
</div>

<!-- No Results Message -->
<div class="no-results" id="no-results">No events found matching your search.</div>

<!-- Carousel -->
<div class="carousel-wrapper">
    <div id="carousel-events-container">
        {% for event in events %}
            <div class="event-card" data-search="{{ event.name|lower }} {{ event.location|lower }} {{ event.organiser|lower }} {{ event.eventType|lower }}">
                <input class="sr-only peer" type="radio" name="carousel" id="carousel-{{ loop.index }}" {% if loop.first %}checked{% endif %} />
                <div class="card">
                    <div class="card-content">
                        <h1 class="card-title">{{ event.name }}</h1>
                        <p class="card-text"><strong>Date:</strong> {{ event.date ? event.date|date('Y-m-d') : '' }}</p>
                        <p class="card-text"><strong>Location:</strong> {{ event.location }}</p>
                        <p class="card-text"><strong>Organizer:</strong> {{ event.organiser }}</p>
                        <p class="card-text"><strong>Type:</strong> {{ event.eventType }}</p>
                        <p class="card-text"><strong>Participants:</strong> {{ event.nbParticipant }}</p>
                        <p class="card-text"><strong>Price:</strong> {{ event.ticketPrice }} DT</p>

                        <div class="btn-container">
                            <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn show-btn">Show</a>
                            <a href="{% if event.hasFormation %}{{ path('app_formation_show', {'id': event.formationId}) }}{% else %}#{% endif %}" 
                               class="btn display-btn" 
                               {% if not event.hasFormation %}style="pointer-events: none; opacity: 0.5;"{% endif %}>
                               Display Formation
                            </a>
                        </div>

                        <div class="btn-container">
                            <a href="{% if event.latitude and event.longitude and event.latitude >= -90 and event.latitude <= 90 and event.longitude >= -180 and event.longitude <= 180 %}
                                    https://www.google.com/maps?q={{ event.latitude }},{{ event.longitude }}
                                    {% else %}
                                    https://www.google.com/maps?q={{ event.location }}
                                    {% endif %}" 
                               target="_blank" class="btn maps-btn">See Maps</a>

                            <button type="button" class="btn qr-btn" onclick="generatePDF({{ event|json_encode|raw }})">Download Info</button>
                            <button type="button" class="btn qr-btn" onclick="showQRCode({{ event|json_encode|raw }})">See QR Code</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<!-- QR Modal -->
<div id="qr-modal" class="qr-modal" onclick="closeQRCode()">
    <div class="qr-modal-content">
        <h2>Event QR Code</h2>
        <img id="qr-code-img" src="" alt="QR Code">
    </div>
</div>

<!-- Swipe Message -->
<div class="swipe-text">
    Swipe to see more events
</div>

{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script src="{{ asset('build/runtime.js') }}"></script>
{{ encore_entry_script_tags('calendar') }}
{% endblock %}

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchBar = document.getElementById('search-bar');
    const eventCards = document.querySelectorAll('.event-card');
    const noResultsMessage = document.getElementById('no-results');

    searchBar.addEventListener('input', function() {
        const searchTerm = this.value.trim().toLowerCase();
        let visibleCards = 0;
        let matchingEvents = [];

        eventCards.forEach(card => {
            const searchData = card.getAttribute('data-search');
            if (searchTerm === '' || searchData.includes(searchTerm)) {
                matchingEvents.push(card);
                visibleCards++;
            }
        });

        const container = document.getElementById('carousel-events-container');
        container.innerHTML = '';
        matchingEvents.forEach(card => container.appendChild(card));

        noResultsMessage.style.display = visibleCards === 0 ? 'block' : 'none';

        if (visibleCards > 0) {
            const firstVisibleCard = document.querySelector('.event-card');
            if (firstVisibleCard) {
                const firstRadio = firstVisibleCard.querySelector('input[type="radio"]');
                if (firstRadio) firstRadio.checked = true;
            }
        }
    });
});

function generatePDF(eventData) {
    const { jsPDF } = window.jspdf;
    const doc = new jsPDF();

    doc.setFontSize(16);
    doc.text(`Event: ${eventData.name}`, 10, 20);

    const details = [
        `Date: ${eventData.date}`,
        `Location: ${eventData.location}`,
        `Organizer: ${eventData.organiser}`,
        `Type: ${eventData.eventType}`,
        `Participants: ${eventData.nbParticipant}`,
        `Price: ${eventData.ticketPrice} DT`
    ];

    details.forEach((detail, i) => {
        doc.text(detail, 10, 40 + (i * 10));
    });

    doc.save(`${eventData.name}_Details.pdf`);
}

function showQRCode(eventData) {
    const eventText = `
        Event Name: ${eventData.name}
        Date: ${eventData.date}
        Location: ${eventData.location}
        Organizer: ${eventData.organiser}
        Type: ${eventData.eventType}
        Participants: ${eventData.nbParticipant}
        Price: ${eventData.ticketPrice} DT
    `;

    const qrModal = document.getElementById('qr-modal');
    const qrCodeImg = document.getElementById('qr-code-img');
    qrCodeImg.src = "https://api.qrserver.com/v1/create-qr-code/?data=" + encodeURIComponent(eventText) + "&size=200x200";
    qrModal.style.display = 'flex';
}

function closeQRCode() {
    document.getElementById('qr-modal').style.display = 'none';
}
</script>
{% endblock %}
