{% extends 'base.html.twig' %}

{% block title %}Event Carousel{% endblock %}

{% block body %}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@300;400;500;600&display=swap');
    body {
        font-family: 'Be Vietnam Pro', sans-serif;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: bold;
        text-align: center;
        transition: all 0.3s ease;
    }

    .show-btn {
        background-color: #4CAF50;
        color: white;
        border: 2px solid #4CAF50;
    }

    .show-btn:hover {
        background-color: #45a049;
        border-color: #45a049;
        cursor: pointer;
    }

    .display-btn {
        background-color: #007BFF;
        color: white;
        border: 2px solid #007BFF;
    }

    .display-btn:hover {
        background-color: #0056b3;
        border-color: #0056b3;
        cursor: pointer;
    }

    .display-btn[style="pointer-events: none; opacity: 0.5;"] {
        background-color: #6c757d;
        border-color: #6c757d;
        opacity: 0.5;
        pointer-events: none;
    }

    .maps-btn {
        background-color: #FF5722;
        color: white;
        border: 2px solid #FF5722;
    }

    .maps-btn:hover {
        background-color: #e64a19;
        border-color: #e64a19;
        cursor: pointer;
    }

    .qr-btn {
        background-color: #9C27B0;
        color: white;
        border: 2px solid #9C27B0;
    }

    .qr-btn:hover {
        background-color: #7b1fa2;
        border-color: #7b1fa2;
        cursor: pointer;
    }

    .btn-container {
        display: flex;
        justify-content: space-between;
        gap: 10px;
    }

    .swipe-text {
        text-align: center;
        font-size: 22px;
        font-weight: 600;
        color: #000;
        margin-top: 20px;
        opacity: 0.8;
    }

    .card-text {
        text-align: center;
        color: #000;
        font-size: 18px;
        line-height: 1.6;
        font-weight: 400;
    }

    .card-title {
        text-align: center;
        color: #333;
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 15px;
        font-family: 'Be Vietnam Pro', sans-serif;
    }

    .qr-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .qr-modal-content {
        background: white;
        padding: 20px;
        border-radius: 8px;
        text-align: center;
    }

    .qr-modal img {
        max-width: 200px;
    }
</style>

<div class="min-h-screen bg-gray-100 p-4 relative">
    <div class="w-96 mx-auto" style="scroll-snap-type: x mandatory;">
        {% for event in events %}
            <div class="">
                <input class="sr-only peer" type="radio" name="carousel" id="carousel-{{ loop.index }}" {% if loop.first %}checked{% endif %} />
                <div class="w-96 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-white rounded-lg shadow-lg transition-all duration-300 opacity-0 peer-checked:opacity-100 peer-checked:z-10 z-0">
                    <div class="py-20 px-2">
                        <h1 class="card-title hover:cursor-pointer mt-2">{{ event.name }}</h1>
                        <p class="card-text"><strong>Date:</strong> {{ event.date ? event.date|date('Y-m-d') : '' }}</p>
                        <p class="card-text"><strong>Location:</strong> {{ event.location }}</p>
                        <p class="card-text"><strong>Organiser:</strong> {{ event.organiser }}</p>
                        <p class="card-text"><strong>Type:</strong> {{ event.eventType }}</p>
                        <p class="card-text"><strong>Participants:</strong> {{ event.nbParticipant }}</p>
                        <p class="card-text"><strong>Price:</strong> {{ event.ticketPrice }} DT</p>
                    </div>
                    
                    <div class="btn-container px-8 pb-4">
                        <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn show-btn"><i class="fas fa-eye"></i> Show</a>
                        <a href="{% if event.hasFormation %}{{ path('app_formation_show', {'id': event.formationId}) }}{% else %}#{% endif %}" class="btn display-btn" {% if not event.hasFormation %}style="pointer-events: none; opacity: 0.5;"{% endif %}>
                            <i class="fas fa-chalkboard-teacher"></i> Display Formation
                        </a>
                        <a href="{% if event.latitude is not empty and event.longitude is not empty and 
                            event.latitude >= -90 and event.latitude <= 90 and 
                            event.longitude >= -180 and event.longitude <= 180 %}
                            https://www.google.com/maps?q={{ event.latitude }},{{ event.longitude }}
                            {% else %}
                            https://www.google.com/maps?q={{ event.location }}
                            {% endif %}" target="_blank" class="btn maps-btn">
                            <i class="fas fa-map-marker-alt"></i> See Maps
                        </a>
                        <button type="button" class="btn qr-btn" onclick="generateTextFile({
                            name: '{{ event.name }}',
                            date: '{{ event.date ? event.date|date('Y-m-d') : '' }}',
                            location: '{{ event.location }}',
                            organiser: '{{ event.organiser }}',
                            eventType: '{{ event.eventType }}',
                            nbParticipant: {{ event.nbParticipant }},
                            ticketPrice: '{{ event.ticketPrice }}'
                        })">
                            <i class="fas fa-download"></i> Download Event Info
                        </button>
                        <button type="button" class="btn qr-btn" onclick="showQRCode({
                            name: '{{ event.name }}',
                            date: '{{ event.date ? event.date|date('Y-m-d') : '' }}',
                            location: '{{ event.location }}',
                            organiser: '{{ event.organiser }}',
                            eventType: '{{ event.eventType }}',
                            nbParticipant: {{ event.nbParticipant }},
                            ticketPrice: '{{ event.ticketPrice }}'
                        })">
                            <i class="fas fa-qrcode"></i> See QR Code
                        </button>
                    </div>
                    <div class="absolute top-1/2 w-full flex justify-between z-20">
                        <label for="carousel-{{ loop.index == 1 ? events|length : loop.index - 1 }}" class="inline-block text-red-600 cursor-pointer -translate-x-5 bg-white rounded-full shadow-md active:translate-y-0.5">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.707-10.293a1 1 0 00-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L9.414 11H13a1 1 0 100-2H9.414l1.293-1.293z" clip-rule="evenodd" />
                            </svg>
                        </label>
                        <label for="carousel-{{ loop.index == events|length ? 1 : loop.index + 1 }}" class="inline-block text-red-600 cursor-pointer translate-x-5 bg-white rounded-full shadow-md active:translate-y-0.5">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 1.414L10.586 9H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z" clip-rule="evenodd" />
                            </svg>
                        </label>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div id="qr-modal" class="qr-modal" onclick="closeQRCode()">
        <div class="qr-modal-content">
            <h2>Event QR Code</h2>
            <img id="qr-code-img" src="" alt="QR Code">
        </div>
    </div>

    <div class="swipe-text">
        <p>Swipe to see more events</p>
    </div>
</div>

<script src="https://unpkg.com/tailwindcss-jit-cdn"></script>

<script>
    function showQRCode(eventData) {
        var eventText = `
            Event Name: ${eventData.name}
            Date: ${eventData.date}
            Location: ${eventData.location}
            Organiser: ${eventData.organiser}
            Type: ${eventData.eventType}
            Participants: ${eventData.nbParticipant}
            Price: ${eventData.ticketPrice} DT
        `;
        
        var qrModal = document.getElementById('qr-modal');
        var qrCodeImg = document.getElementById('qr-code-img');

        qrCodeImg.src = "https://api.qrserver.com/v1/create-qr-code/?data=" + encodeURIComponent(eventText) + "&size=200x200";
        
        qrModal.style.display = 'flex';
    }

    function closeQRCode() {
        var qrModal = document.getElementById('qr-modal');
        qrModal.style.display = 'none';
    }

    function generateTextFile(eventData) {
        var eventText = `
            Event Name: ${eventData.name}
            Date: ${eventData.date}
            Location: ${eventData.location}
            Organiser: ${eventData.organiser}
            Type: ${eventData.eventType}
            Participants: ${eventData.nbParticipant}
            Price: ${eventData.ticketPrice} DT
        `;

        var blob = new Blob([eventText], { type: 'text/plain' });
        var link = document.createElement('a');
        link.href = URL.createObjectURL(blob);
        link.download = `${eventData.name}_Details.txt`;
        link.click();
    }
</script>

{% endblock %}
