{% extends 'base.html.twig' %}

{% block title %}Career Bridge | Best Match Jobs{% endblock %}

{% block stylesheets %}
<style>
    /* Hero Section Styling */
    .jobs-hero {
        background: linear-gradient(135deg, #083270 0%, #0d6efd 100%);
        padding: 5rem 0 3rem;
        margin-bottom: 4rem;
        position: relative;
        overflow: hidden;
    }
    
    .jobs-hero::after {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 100%;
        height: 70px;
        background: #fff;
        border-radius: 50% 50% 0 0 / 100% 100% 0 0;
    }
    
    .jobs-hero-content {
        max-width: 600px;
        color: white;
        position: relative;
        z-index: 1;
    }
    
    .jobs-hero-title {
        font-weight: 700;
        margin-bottom: 1rem;
        font-size: 2.5rem;
    }
    
    .jobs-hero-desc {
        opacity: 0.9;
        margin-bottom: 2rem;
        font-size: 1.1rem;
    }
    
    /* Job Card Styling */
    .job-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        overflow: hidden;
        margin-bottom: 1.5rem;
        background: white;
    }
    
    .job-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    }
    
    .job-card-header {
        display: flex;
        align-items: center;
        padding-bottom: 1rem;
        border-bottom: 1px solid #f0f0f0;
    }
    
    .company-logo {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        background-color: rgba(13, 110, 253, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        font-size: 1.5rem;
        color: #0d6efd;
    }
    
    .job-card-content {
        padding: 1.5rem;
    }
    
    .job-tags {
        margin-top: 1rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }
    
    .job-tag {
        background-color: rgba(13, 110, 253, 0.1);
        color: #0d6efd;
        padding: 0.3rem 0.8rem;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 500;
    }
    
    .job-location {
        display: flex;
        align-items: center;
        color: #6c757d;
        margin-bottom: 1rem;
    }
    
    .job-location i {
        margin-right: 0.5rem;
    }
    
    .job-card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.5rem;
        background-color: #f8f9fa;
    }
    
    .match-badge {
        background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
        color: white;
        border-radius: 50px;
        padding: 0.5rem 1.2rem;
        font-weight: 600;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
    }
    
    .match-badge i {
        margin-right: 0.5rem;
    }
    
    .view-details-btn {
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .view-details-btn:hover {
        background-color: #0b5ed7;
        transform: translateY(-2px);
    }
    
    .apply-btn {
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .apply-btn:hover {
        background-color: #0b5ed7;
        transform: translateY(-2px);
    }
    
    .applied-btn {
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        font-weight: 500;
        background-color: #6c757d;
        border-color: #6c757d;
    }
    
    /* No Jobs Found Section */
    .no-jobs-found {
        background-color: #f8f9fa;
        padding: 4rem 2rem;
        border-radius: 15px;
        text-align: center;
        margin: 2rem 0;
    }
    
    .no-jobs-found i {
        font-size: 3.5rem;
        color: #0d6efd;
        margin-bottom: 1.5rem;
        opacity: 0.7;
    }
    
    /* Results Summary */
    .results-summary {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1rem 1.5rem;
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .match-count {
        font-size: 1.1rem;
    }
    
    .match-count span {
        font-weight: 700;
        color: #0d6efd;
    }
    
    /* Section styling */
    .section-title {
        margin-bottom: 2rem;
        position: relative;
    }
    
    .section-title h2 {
        position: relative;
        margin-bottom: 15px;
        font-weight: 700;
    }
    
    .section-title h2::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 0;
        width: 70px;
        height: 3px;
        background: #0d6efd;
    }
    
    .section-title span {
        color: #0d6efd;
        font-weight: 600;
        display: inline-block;
        margin-bottom: 8px;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
        .jobs-hero {
            padding: 4rem 0 6rem;
        }
        
        .job-card-footer {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
        }
        
        .results-summary {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
        }
    }
</style>
{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="jobs-hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="jobs-hero-content wow fadeInUp" data-wow-delay=".2s">
                    <h1 class="jobs-hero-title">Best Match Jobs</h1>
                    <p class="jobs-hero-desc">
                        Discover opportunities tailored to your skills and experience profile
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
    {% if error %}
        <div class="alert alert-danger shadow-sm wow fadeInUp" data-wow-delay=".2s">
            {{ error }}
        </div>
    {% endif %}
    
    <!-- Job Listings Section -->
    <section class="job-listings">
        <div class="section-title wow fadeInUp" data-wow-delay=".2s">
            <span>Personalized Recommendations</span>
            <h2>Jobs That Match Your Profile</h2>
        </div>
        
        {% if jobs is iterable and jobs|length > 0 %}
            <!-- Results Summary -->
            <div class="results-summary wow fadeInUp" data-wow-delay=".2s">
                <div class="match-count">
                    Found <span>{{ count }}</span> matching job{{ count > 1 ? 's' : '' }}
                </div>
                <div class="text-muted">
                    <i class="lni lni-sort-amount-dsc me-1"></i> 
                    Sorted by match percentage
                </div>
            </div>
            
            <div class="row">
                {% for job in jobs %}
                    <div class="col-lg-6 wow fadeInUp" data-wow-delay=".{{ loop.index * 0.05 + 0.1 }}s">
                        <div class="job-card">
                            <div class="job-card-content">
                                <div class="job-card-header">
                                    <div class="company-logo">
                                        <i class="lni lni-briefcase"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-1">{{ job.title }}</h5>
                                        <span class="text-muted">{{ job.position }}</span>
                                    </div>
                                </div>
                                
                                <div class="mt-3">
                                    <div class="job-location">
                                        <i class="lni lni-map-marker"></i>
                                        <span>{{ job.location }}</span>
                                    </div>
                                    
                                    <div class="job-tags">
                                        <span class="job-tag">
                                            <i class="lni lni-star-filled me-1"></i>
                                            {{ job.match_percent }}% Match
                                        </span>
                                        <span class="job-tag">{{ job.position }}</span>
                                        {% if job.posted_date %}
                                            <span class="job-tag">
                                                <i class="lni lni-calendar me-1"></i>
                                                {{ job.posted_date|date('M d, Y') }}
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            
                            <div class="job-card-footer">
                                <div class="match-badge">
                                    <i class="lni lni-target"></i>
                                    {{ job.match_percent }}% Match
                                </div>
                                <div class="d-flex gap-2">
                                    <a href="{{ path('app_job_show', {id: job.id}) }}" class="btn btn-outline-primary view-details-btn">
                                        View Details <i class="lni lni-arrow-right ms-1"></i>
                                    </a>
                                    {% if job.id in appliedJobIds %}
                                        <button class="btn btn-secondary applied-btn" disabled>
                                            <i class="lni lni-checkmark-circle me-1"></i> Applied
                                        </button>
                                    {% else %}
                                        <a href="{{ path('quick_apply', {'jobId': job.id}) }}" 
                                           class="btn btn-primary apply-btn quick-apply-btn"
                                           data-job-title="{{ job.title }}">
                                            <i class="lni lni-rocket me-1"></i> Quick Apply
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% elseif jobs is not null %}
            <div class="no-jobs-found wow fadeInUp" data-wow-delay=".2s">
                <i class="lni lni-search"></i>
                <h4>No matching jobs found for your profile</h4>
                <p class="text-muted mb-4">Try updating your profile or browse all available jobs.</p>
                <a href="{{ path('app_jobs_all') }}" class="btn btn-primary">
                    <i class="lni lni-briefcase me-1"></i> View All Jobs
                </a>
            </div>
        {% endif %}
    </section>
</div>

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const quickApplyButtons = document.querySelectorAll('.quick-apply-btn');
    
    quickApplyButtons.forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            const jobTitle = this.getAttribute('data-job-title');
            
            if (confirm(`Are you sure you want to quick apply for "${jobTitle}"? A professional application will be submitted automatically.`)) {
                window.location.href = this.href;
            }
        });
    });
});
</script>
{% endblock %}
{% endblock %}