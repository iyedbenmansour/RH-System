<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Your Website Title{% endblock %}</title>

    <!-- CSS Files -->
    <link rel="stylesheet" href="{{ asset('Front/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('Front/css/animate.css') }}">
    <link rel="stylesheet" href="{{ asset('Front/css/glightbox.min.css') }}">
    <link rel="stylesheet" href="{{ asset('Front/css/lineicons.css') }}">
    <link rel="stylesheet" href="{{ asset('Front/css/styles.css') }}">
    <style>
      /* Transparent Navbar with Black Text */
      .navbar {
        background-color: transparent !important;
        color: black !important;
        transition: background-color 0.3s ease-in-out;
      }

      .navbar .nav-link,
      .navbar-brand span,
      .navbar-toggler-icon {
        color: black !important;
      }

      /* Navbar Text Hover */
      .navbar .nav-link:hover {
        color: #555 !important;
      }

      /* Sticky Navbar Background on Scroll */
      .navbar.scrolled {
        background-color: rgba(255, 255, 255, 0.9) !important;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
    </style>
    {% block stylesheets %}{% endblock %}
  </head>
  <body>
    <!-- Header -->
    <header class="header">
      <div class="container">
        <nav class="navbar navbar-expand-lg fixed-top">
          <a class="navbar-brand" href="{{ path('app_post_list') }}">
            <i class="bi-back"></i>
            <span>Career Bridge</span>
          </a>

          <!-- Mobile Profile Icon -->
          <div class="d-lg-none ms-auto me-4">
            <a href="#" id="navbar-mobile-profile" class="navbar-icon bi-person"></a>
          </div>

          <!-- Navbar Toggler -->
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <!-- Navbar Links -->
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-lg-5 me-lg-auto">
              <!-- Home -->
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_post_list') }}">Home</a>
              </li>
              <!-- Jobs -->
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_jobs_all') }}">Jobs</a>
              </li>
              <!-- Dropdown: My Activities -->
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="activitiesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  My Activities
                </a>
                <ul class="dropdown-menu" aria-labelledby="activitiesDropdown">
                  <li><a class="dropdown-item" href="{{ path('best_match') }}">Best Match</a></li>
                  <li><a class="dropdown-item" href="{{ path('app_user_applications') }}">My Applications</a></li>
                  <li><a class="dropdown-item" href="{{ path('employee_leave_requests') }}">My Requests</a></li>
                  <li><a class="dropdown-item" id="reclamation-link" href="#">My Reclamation</a></li>
                </ul>
              </li>
              <!-- Events -->
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_event_index') }}">Events</a>
              </li>
              <!-- Chatbot -->
              <li class="nav-item">
                <a class="nav-link" href="{{ path('chatbot_index') }}">Chatbot</a>
              </li>
              <!-- Login/Profile -->
              <li class="nav-item" id="login-profile-nav">
                <a class="nav-link" href="{% if app.user %}{{ path('candidat_dashboard') }}{% else %}{{ path('login_page') }}{% endif %}">
                  <i class="bi-person"></i> {% if app.user %}Profile{% else %}Login{% endif %}
                </a>
              </li>
            </ul>

            <!-- Desktop Profile Icon -->
            <div class="d-none d-lg-block">
              <a href="#" id="navbar-desktop-profile" class="navbar-icon bi-person"></a>
            </div>
          </div>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main>
      {% block body %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <div class="row">
          <div class="col-lg-4">
            <a href="#" class="footer-logo">
              <img src="{{ asset('Front/images/logo/logo.svg') }}" alt="Logo">
            </a>
            <p>Some description about your company.</p>
          </div>
          <div class="col-lg-2">
            <h5>About Us</h5>
            <ul>
              <li><a href="#features">Features</a></li>
              <li><a href="#faq">FAQ</a></li>
              <li><a href="#team">Team</a></li>
              <li><a href="#contact">Contact</a></li>
            </ul>
          </div>
          <div class="col-lg-2">
            <h5>Features</h5>
            <ul>
              <li><a href="javascript:void(0)">How It Works</a></li>
              <li><a href="javascript:void(0)">Privacy Policy</a></li>
              <li><a href="javascript:void(0)">Terms of Service</a></li>
            </ul>
          </div>
          <div class="col-lg-4">
            <h5>Contact Us</h5>
            <p>Email: <a href="mailto:info@example.com">info@example.com</a></p>
            <p>Phone: <a href="tel:+123456789">+123456789</a></p>
          </div>
        </div>
      </div>
    </footer>

    <!-- Back to Top -->
    <a href="#top" class="back-to-top"><i class="lni lni-chevron-up"></i></a>

    <!-- Scripts -->
    <script src="{{ asset('Front/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('Front/js/wow.min.js') }}"></script>
    <script src="{{ asset('Front/js/glightbox.min.js') }}"></script>
    <script src="{{ asset('Front/js/main.js') }}"></script>

    <!-- Dynamic Links Logic -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        var navItem = document.getElementById('login-profile-nav');
        if (navItem && localStorage.getItem('candidat_id')) {
          var link = navItem.querySelector('a');
          link.innerHTML = '<i class="bi-person"></i> Profile';
          link.setAttribute('href', "{{ path('candidat_dashboard') }}");
        }

        var reclamationLink = document.getElementById('reclamation-link');
        if (reclamationLink) {
          var employeeId = localStorage.getItem('employee_id');
          reclamationLink.setAttribute('href', employeeId ? `/reclamation/my-reclamations/${employeeId}` : "{{ path('login_page') }}");
        }

        var mobileProfile = document.getElementById('navbar-mobile-profile');
        if (mobileProfile) {
          mobileProfile.setAttribute('href', localStorage.getItem('candidat_id') ? "{{ path('candidat_dashboard') }}" : "{{ path('login_page') }}");
        }

        var desktopProfile = document.getElementById('navbar-desktop-profile');
        if (desktopProfile) {
          desktopProfile.setAttribute('href', localStorage.getItem('candidat_id') ? "{{ path('candidat_dashboard') }}" : "{{ path('login_page') }}");
        }
      });

      // Add class to navbar when scrolling
      window.addEventListener('scroll', function () {
        const navbar = document.querySelector('.navbar');
        if (window.scrollY > 50) {
          navbar.classList.add('scrolled');
        } else {
          navbar.classList.remove('scrolled');
        }
      });
    </script>

    {% block javascripts %}{% endblock %}
  </body>
</html>