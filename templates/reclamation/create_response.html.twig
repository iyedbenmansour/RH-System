{% extends 'baseBack.html.twig' %}

{% block title %}Create Response - Career Bridge{% endblock %}

{% block body %}
    <section class="page_title ls s-py-50 corner-title ls invise-10">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1>Create Response for Complaint #{{ reclamation.id }}</h1>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_home_front') }}">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_reclamation_index') }}">Complaints</a>
                        </li>
                        <li class="breadcrumb-item active">
                            Create Response
                        </li>
                    </ol>
                    <div class="divider-15 d-none d-xl-block"></div>
                </div>
            </div>
        </div>
    </section>

    <section class="s-pt-75 s-pb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white">
                            <h3 class="mb-0">Response Details</h3>
                        </div>
                        <div class="card-body">
                            {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_label(form.reponse, 'Response Text') }}
                                    {{ form_widget(form.reponse, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                                    <small class="form-text text-muted">Please provide a detailed response to the complaint.</small>
                                </div>
                                
                                <div class="form-group">
                                    {{ form_label(form.pdfFile, 'Attach PDF (Optional)') }}
                                    {{ form_widget(form.pdfFile, {'attr': {'class': 'form-control-file'}}) }}
                                </div>
                                
                                <input type="hidden" name="idRec" value="{{ reclamation.id }}">
                                <input type="hidden" name="idUser" value="{{ reclamation.userId }}">
                                
                                <div class="form-group mb-0">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-paper-plane mr-2"></i> Submit Response
                                    </button>
                                    <a href="{{ path('app_reclamation_index') }}" class="btn btn-outline-secondary">
                                        Cancel
                                    </a>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}