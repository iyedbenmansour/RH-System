{{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'novalidate': 'novalidate', 'class': 'needs-validation', 'id': 'reclamation-form'}}) }}
    <div class="mb-3">
        {{ form_label(form.userId, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.userId, {'attr': {'class': 'form-control' ~ (form.userId.vars.errors|length ? ' is-invalid' : '')}}) }}
        {% if form.userId.vars.errors|length %}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.userId) }}
            </div>
        {% endif %}
    </div>

    <div class="mb-3">
        {{ form_label(form.companyId, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.companyId, {'attr': {'class': 'form-control' ~ (form.companyId.vars.errors|length ? ' is-invalid' : '')}}) }}
        {% if form.companyId.vars.errors|length %}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.companyId) }}
            </div>
        {% endif %}
    </div>

    <div class="mb-3">
        {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control' ~ (form.title.vars.errors|length ? ' is-invalid' : '')}}) }}
        {% if form.title.vars.errors|length %}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.title) }}
            </div>
        {% endif %}
    </div>

    <div class="mb-3">
        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control' ~ (form.description.vars.errors|length ? ' is-invalid' : ''), 'rows': 5}}) }}
        {% if form.description.vars.errors|length %}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.description) }}
            </div>
        {% endif %}
    </div>
    
    <div class="mb-3">
        {{ form_label(form.imageFile, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control' ~ (form.imageFile.vars.errors|length ? ' is-invalid' : '')}}) }}
        <div class="form-text">Select an image (JPG, PNG) - Maximum size 2MB.</div>
        {% if form.imageFile.vars.errors|length %}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.imageFile) }}
            </div>
        {% endif %}
        {% if form.vars.value.imagePath and form.vars.value.imagePath != 'no-image.jpg' %}
            <div class="mt-2">
                <small>Current image:</small>
                <img src="{{ asset('uploads/reclamation/images/' ~ form.vars.value.imagePath) }}" alt="Current image" class="img-thumbnail mt-1" style="max-height: 100px;">
            </div>
        {% endif %}
    </div>
    
    <div class="mb-3">
        {{ form_label(form.pdfFile, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.pdfFile, {'attr': {'class': 'form-control' ~ (form.pdfFile.vars.errors|length ? ' is-invalid' : '')}}) }}
        <div class="form-text">Select a PDF document - Maximum size 5MB.</div>
        {% if form.pdfFile.vars.errors|length %}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.pdfFile) }}
            </div>
        {% endif %}
        {% if form.vars.value.pdfPath and form.vars.value.pdfPath != 'no-pdf.pdf' %}
            <div class="mt-2">
                <small>Current PDF: <a href="{{ asset('uploads/reclamation/pdfs/' ~ form.vars.value.pdfPath) }}" target="_blank">View PDF</a></small>
            </div>
        {% endif %}
    </div>
    
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a href="{{ path('app_reclamation_index') }}" class="btn btn-secondary me-md-2">
            <i class="fa fa-arrow-left me-1"></i> Back to list
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save me-1"></i> {{ button_label|default('Save') }}
        </button>
    </div>
{{ form_end(form) }}