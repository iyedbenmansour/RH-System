{% extends 'base.html.twig' %}

{% block title %}Response to Complaint #{{ reclamation.id }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Response to Complaint #{{ reclamation.id }}</h1>
        
        <div class="card mb-4">
            <div class="card-header">
                <h2>Original Complaint</h2>
            </div>
            <div class="card-body">
                <p><strong>Date:</strong> {{ reclamation.date|date('Y-m-d H:i') }}</p>
                <p><strong>Status:</strong> 
                    <span class="badge bg-{{ reclamation.statueOfReclamation == 'Resolved' ? 'success' : 
                                          (reclamation.statueOfReclamation == 'Rejected' ? 'danger' : 
                                          (reclamation.statueOfReclamation == 'In Progress' ? 'warning' : 'secondary')) }}">
                        {{ reclamation.statueOfReclamation }}
                    </span>
                </p>
                <p><strong>Description:</strong> {{ reclamation.description }}</p>
            </div>
        </div>

        {% if response %}
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h2>Response</h2>
                </div>
                <div class="card-body">
                    <p><strong>Date:</strong> {{ response.date|date('Y-m-d H:i') }}</p>
                    <p><strong>Status:</strong> 
                        <span class="badge bg-{{ response.statueOfReponseReclamation == 'Processed' ? 'success' : 
                                              (response.statueOfReponseReclamation == 'Rejected' ? 'danger' : 
                                              (response.statueOfReponseReclamation == 'Pending' ? 'warning' : 'info')) }}">
                            {{ response.statueOfReponseReclamation }}
                        </span>
                    </p>
                    <p><strong>Response:</strong> {{ response.reponse }}</p>
                    
                    {% if response.pdfPath and response.pdfPath != 'no-pdf.pdf' %}
                        <p>
                            <strong>Attached PDF:</strong> 
                            <a href="{{ asset('uploads/reponse_pdfs/' ~ response.pdfPath) }}" target="_blank">
                                Download PDF
                            </a>
                        </p>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="alert alert-info">
                No response has been provided yet for this complaint.
            </div>
        {% endif %}

        <a href="{{ path('app_reclamation_index') }}" class="btn btn-primary mt-3">
            Back to complaints list
        </a>
    </div>
{% endblock %}