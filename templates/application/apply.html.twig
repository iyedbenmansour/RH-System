{% extends 'base.html.twig' %}

{% block title %}Apply for {{ job.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h2>Apply for: {{ job.title }}</h2>
                    </div>
                    <div class="card-body">
                        <form method="post" id="apply-form">
                            <input type="hidden" name="job_id" value="{{ job.id }}">
                            <input type="hidden" name="company_id" value="{{ job.companyId }}">
                            <input type="hidden" id="user_id" name="user_id" required>
                            
                            <div class="mb-3">
                                <label for="comment" class="form-label">Cover Letter/Message</label>
                                <textarea class="form-control" id="comment" name="comment" rows="5" required></textarea>
                            </div>
                            
                            <div class="mb-3">
                                <label for="additional_file" class="form-label">Resume/CV (URL or brief description)</label>
                                <input type="text" class="form-control" id="additional_file" name="additional_file" required>
                                <div class="form-text">Example: "https://example.com/myresume.pdf" or "See LinkedIn profile at..."</div>
                            </div>
                            
                            <div class="d-flex justify-content-between mt-4">
                                <a href="{{ path('app_job_show', {'id': job.id}) }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Job
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-send"></i> Submit Application
                                </button>
                            </div>
                        </form>
                        <div id="userid-error" class="alert alert-danger mt-3 d-none">
                            Error: User ID not found in your session. Please log in again.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const candidatId = localStorage.getItem('candidat_id');
            const userIdInput = document.getElementById('user_id');
            const form = document.getElementById('apply-form');
            const errorDiv = document.getElementById('userid-error');

            if (candidatId && userIdInput) {
                userIdInput.value = candidatId;
            } else {
                if (errorDiv) {
                    errorDiv.classList.remove('d-none');
                }
                if (form) {
                    form.addEventListener('submit', function(e) {
                        e.preventDefault();
                        alert('User ID not found. Please log in again.');
                    });
                }
            }
        });
    </script>
{% endblock %}