{% extends 'base.html.twig' %}

{% block title %}Edit Application{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Edit Application</h1>
        
        <form method="post" action="{{ path('app_update_application', {'id': application.id}) }}">
            <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea class="form-control" id="comment" name="comment" rows="4">{{ application.comment }}</textarea>
            </div>
            
            <div class="mb-3">
                <label for="additional_file" class="form-label">Additional File</label>
                <input type="text" class="form-control" id="additional_file" name="additional_file" value="{{ application.additionalFile }}">
            </div>
            
            <button type="submit" class="btn btn-primary">Update Application</button>
            <a href="{{ path('app_user_applications', {'user_id': application.userId}) }}" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
{% endblock %}