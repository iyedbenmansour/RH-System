{% extends 'base.html.twig' %}

{% block title %}My Applications{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold text-primary">My Job Applications</h1>
        </div>
        
        {% if applications|length == 0 %}
            <div class="alert alert-info p-5 text-center shadow-sm border">
                <h4 class="fw-bold">You haven't applied to any jobs yet.</h4>
                <p class="mb-4">Track your job search by adding your applications here.</p>
                <div class="mt-3">
                    <a href="{{ path('app_new_application') }}" class="btn btn-primary btn-lg px-4 py-2 shadow-sm">
                        Apply Now
                    </a>
                </div>
            </div>
        {% else %}
          <!-- Application Statistics -->
            <div class="row g-4 mb-5">
                <div class="col-md-3">
                    <div class="card h-100 border-0 rounded-3 shadow-sm hover-shadow">
                        <div class="card-body text-center p-4">
                            <h3 class="card-title text-primary fw-bold mb-3">Total</h3>
                            <h2 class="card-text mb-0 display-4 fw-bold">{{ applications|length }}</h2>
                            <p class="text-muted mt-2">Applications</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card h-100 border-0 rounded-3 shadow-sm hover-shadow">
                        <div class="card-body text-center p-4">
                            <h3 class="card-title text-warning fw-bold mb-3">Pending</h3>
                            <h2 class="card-text mb-0 display-4 fw-bold text-warning">
                                {{ applications|filter(a => a.status == 'Pending')|length }}
                            </h2>
                            <p class="text-muted mt-2">Applications</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="card h-100 border-0 rounded-3 shadow-sm hover-shadow">
                        <div class="card-body text-center p-4">
                            <h3 class="card-title text-success fw-bold mb-3">Accepted</h3>
                            <h2 class="card-text mb-0 display-4 fw-bold text-success">
                                {{ applications|filter(a => a.status == 'Accepted')|length }}
                            </h2>
                            <p class="text-muted mt-2">Offers</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Filter Section -->
            <div class="card shadow mb-4 border-0 rounded-3">
                <div class="card-header bg-light py-3">
                    <div class="row align-items-center">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <div class="input-group input-group-lg shadow-sm">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" id="applicationSearch" class="form-control border-start-0 py-2" 
                                       placeholder="Search applications...">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex gap-2">
                                <select class="form-select form-select-lg shadow-sm" id="statusFilter">
                                    <option value="all">All Statuses</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Interviewing">Interviewing</option>
                                    <option value="Accepted">Accepted</option>
                                    <option value="Rejected">Rejected</option>
                                </select>
                                <button class="btn btn-outline-secondary btn-lg shadow-sm" id="resetFilters">
                                    Reset
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Applications Table -->
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="applicationsTable">
                        <thead>
                            <tr class="table-light">
                                <th class="py-3 px-4 fw-bold">Job Title</th>
                                <th class="py-3 px-4 fw-bold">Company</th>
                                <th class="py-3 px-4 fw-bold">Applied Date</th>
                                <th class="py-3 px-4 fw-bold">Status</th>
                                <th class="py-3 px-4 text-end fw-bold">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for application in applications %}
                                <tr data-status="{{ application.status }}" class="border-bottom">
                                    <td class="py-3 px-4">
                                        <div class="fw-bold fs-5">{{ application.jobTitle|default(application.jobId) }}</div>
                                        <div class="text-muted">ID: {{ application.jobId }}</div>
                                    </td>
                                    <td class="py-3 px-4">
                                        <div class="fw-bold">{{ application.companyName|default(application.companyId) }}</div>
                                        <div class="text-muted">ID: {{ application.companyId }}</div>
                                    </td>
                                    <td class="py-3 px-4">
                                        <div class="fw-bold">{{ application.appliedDate|date('M d, Y') }}</div>
                                        <div class="text-muted">{{ application.appliedDate|date('l') }}</div>
                                    </td>
                                    <td class="py-3 px-4">
                                        <span class="badge rounded-pill fs-6 py-2 px-3 bg-{{ 
                                            application.status == 'Accepted' ? 'success' : 
                                            (application.status == 'Rejected' ? 'danger' : 
                                            (application.status == 'Interviewing' ? 'info' : 'warning')) 
                                        }}">
                                            {{ application.status }}
                                        </span>
                                    </td>
                                    <td class="py-3 px-4 text-end">
                                        <div class="btn-group shadow">
                                            <a href="{{ path('app_update_application', {'id': application.id}) }}" 
                                                class="btn btn-primary" data-bs-toggle="tooltip" title="Edit Application">
                                                Edit
                                            </a>
                                            <button type="button" class="btn btn-danger" 
                                                    data-bs-toggle="modal" data-bs-target="#deleteModal{{ application.id }}"
                                                    data-bs-toggle="tooltip" title="Delete Application">
                                                Delete
                                            </button>
                                        </div>
                                        
                                        <!-- Delete Modal -->
                                        <div class="modal fade" id="deleteModal{{ application.id }}" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content border-0 shadow">
                                                    <div class="modal-header bg-danger text-white">
                                                        <h5 class="modal-title">
                                                            Confirm Deletion
                                                        </h5>
                                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body p-4">
                                                        <p class="fs-5">Are you sure you want to delete this application record?</p>
                                                        <div class="alert alert-warning">
                                                            This action cannot be undone.
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary btn-lg" data-bs-dismiss="modal">
                                                            Cancel
                                                        </button>
                                                        <form method="post" action="{{ path('app_delete_application', {'id': application.id}) }}" class="d-inline">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ application.id) }}">
                                                            <button type="submit" class="btn btn-danger btn-lg">
                                                                Delete
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            
          
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
        
        // Search and filter functionality
        const searchInput = document.getElementById('applicationSearch');
        const statusFilter = document.getElementById('statusFilter');
        const resetButton = document.getElementById('resetFilters');
        const table = document.getElementById('applicationsTable');
        
        if (table) {
            const rows = table.querySelectorAll('tbody tr');
            
            function filterApplications() {
                const searchTerm = searchInput.value.toLowerCase();
                const statusValue = statusFilter.value;
                
                rows.forEach(row => {
                    const rowText = row.textContent.toLowerCase();
                    const rowStatus = row.getAttribute('data-status');
                    
                    const matchesSearch = searchTerm === '' || rowText.includes(searchTerm);
                    const matchesStatus = statusValue === 'all' || rowStatus === statusValue;
                    
                    if (matchesSearch && matchesStatus) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            }
            
            function resetFilters() {
                searchInput.value = '';
                statusFilter.value = 'all';
                rows.forEach(row => {
                    row.style.display = '';
                });
            }
            
            // Event listeners
            searchInput.addEventListener('input', filterApplications);
            statusFilter.addEventListener('change', filterApplications);
            resetButton.addEventListener('click', resetFilters);
            
            // Add hover effect for cards
            document.querySelectorAll('.hover-shadow').forEach(function(card) {
                card.addEventListener('mouseover', function() {
                    this.classList.add('shadow');
                    this.classList.remove('shadow-sm');
                });
                
                card.addEventListener('mouseout', function() {
                    this.classList.add('shadow-sm');
                    this.classList.remove('shadow');
                });
            });
        }
    });
</script>
{% endblock %}