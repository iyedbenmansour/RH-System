{% extends 'base.html.twig' %}

{% block title %}My Applications{% endblock %}

{% block body %}
<div class="container-fluid px-lg-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-dark mb-1">My Applications</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Applications</li>
                </ol>
            </nav>
        </div>
    </div>
    
    {% if user_id is defined and user_id %}
        {% if applications|length == 0 %}
            <div class="card border-0 shadow-sm rounded-lg overflow-hidden">
                <div class="card-body p-5 text-center bg-light">
                    <div class="empty-state">
                        <div class="empty-state-icon bg-soft-primary rounded-circle">
                            <i class="bi bi-file-earmark-text-fill text-primary fs-1"></i>
                        </div>
                        <h3 class="mt-4 fw-bold">No applications yet</h3>
                        <p class="text-muted mb-4">Start tracking your job search by adding your first application</p>
                        <a href="{{ path('app_new_application') }}" class="btn btn-primary px-4 py-2">
                            <i class="bi bi-plus-lg me-2"></i>Add Application
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <!-- Stats Cards -->
            <div class="row g-4 mb-4">
                <div class="col-lg-3 col-md-6">
                    <div class="card border-0 shadow-sm rounded-lg">
                        <div class="card-body text-center">
                            <h6 class="text-muted text-uppercase">Total Applications</h6>
                            <h2 class="fw-bold">{{ applications|length }}</h2>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="card border-0 shadow-sm rounded-lg">
                        <div class="card-body text-center">
                            <h6 class="text-muted text-uppercase">Pending</h6>
                            <h2 class="fw-bold text-warning">{{ applications|filter(a => a.status == 'Pending')|length }}</h2>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="card border-0 shadow-sm rounded-lg">
                        <div class="card-body text-center">
                            <h6 class="text-muted text-uppercase">Accepted</h6>
                            <h2 class="fw-bold text-success">{{ applications|filter(a => a.status == 'Accepted')|length }}</h2>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="card border-0 shadow-sm rounded-lg">
                        <div class="card-body text-center">
                            <h6 class="text-muted text-uppercase">Rejected</h6>
                            <h2 class="fw-bold text-danger">{{ applications|filter(a => a.status == 'Rejected')|length }}</h2>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Applications Table -->
            <div class="card border-0 shadow-sm overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="py-3 px-4 fw-bold text-uppercase text-muted small">Job Title</th>
                                <th class="py-3 px-4 fw-bold text-uppercase text-muted small">Company</th>
                                <th class="py-3 px-4 fw-bold text-uppercase text-muted small">Applied Date</th>
                                <th class="py-3 px-4 fw-bold text-uppercase text-muted small">Status</th>
                                <th class="py-3 px-4 text-end fw-bold text-uppercase text-muted small">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for application in applications %}
                                <tr class="border-bottom border-light">
                                    <td class="py-3 px-4 align-middle">
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0 bg-soft-primary rounded-circle p-2 me-3">
                                                <i class="bi bi-briefcase-fill text-primary"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-bold">{{ application.jobTitle|default(application.jobId) }}</h6>
                                                <small class="text-muted">ID: {{ application.jobId }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-3 px-4 align-middle">
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0 bg-soft-info rounded-circle p-2 me-3">
                                                <i class="bi bi-building text-info"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0">{{ application.companyName|default(application.companyId) }}</h6>
                                                <small class="text-muted">ID: {{ application.companyId }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-3 px-4 align-middle">
                                        <div class="fw-bold">{{ application.appliedDate|date('M d, Y') }}</div>
                                        <small class="text-muted">{{ application.appliedDate|date('l') }}</small>
                                    </td>
                                    <td class="py-3 px-4 align-middle">
                                        <span class="badge rounded-pill py-2 px-3 bg-soft-{% if application.status == 'Accepted' %}success text-success{% elseif application.status == 'Rejected' %}danger text-danger{% elseif application.status == 'Interviewing' %}info text-info{% else %}warning text-warning{% endif %}">
                                            <i class="bi {% if application.status == 'Accepted' %}bi-check-circle{% elseif application.status == 'Rejected' %}bi-x-circle{% elseif application.status == 'Interviewing' %}bi-people{% else %}bi-hourglass-split{% endif %} me-1"></i>
                                            {{ application.status }}
                                        </span>
                                    </td>
                                    <td class="py-3 px-4 text-end align-middle">
                                        <!-- Action Buttons -->
                                        <a href="{{ path('app_update_application', {'id': application.id}) }}" class="btn btn-outline-primary btn-sm me-2">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <form method="post" action="{{ path('app_delete_application', {'id': application.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this application?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ application.id) }}">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-light border-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted">
                            Showing <span class="fw-bold">1</span> to <span class="fw-bold">{{ applications|length }}</span> of <span class="fw-bold">{{ applications|length }}</span> entries
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% else %}
        <div class="alert alert-warning mt-4" id="no-user-alert" style="display:none;">
            No user selected. Please set your candidate ID in local storage.<br>
            <code>localStorage.setItem('candidat_id', 'YOUR_USER_ID')</code>
        </div>
    {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    function getQueryParam(name) {
        const urlParams = new URLSearchParams(window.location.search);
        return urlParams.get(name);
    }

    const urlUserId = getQueryParam('user_id');

    if (!urlUserId) {
        const storedUserId = localStorage.getItem('candidat_id');
        if (storedUserId) {
            // Redirect to same route with ?user_id=storedUserId
            const baseUrl = window.location.pathname;
            window.location.href = `${baseUrl}?user_id=${encodeURIComponent(storedUserId)}`;
        } else {
            // Show alert for missing user_id
            document.getElementById('no-user-alert').style.display = 'block';
        }
    }
});
</script>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .bg-soft-primary {
        background-color: rgba(13, 110, 253, 0.1);
    }
    .bg-soft-success {
        background-color: rgba(25, 135, 84, 0.1);
    }
    .bg-soft-warning {
        background-color: rgba(255, 193, 7, 0.1);
    }
    .bg-soft-info {
        background-color: rgba(13, 202, 240, 0.1);
    }
    .bg-soft-danger {
        background-color: rgba(220, 53, 69, 0.1);
    }
    .table-hover tbody tr:hover {
        background-color: rgba(248, 249, 250, 0.8);
    }
</style>
{% endblock %}