{% extends 'base.html.twig' %}

{% block title %}AI Assistant{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h3 class="mb-0">üí¨ AI Assistant</h3>
                </div>
                <div class="card-body p-0" style="background: #f8fafc;">
                    <div id="chatbox" class="chatbox">
                        <div class="message-list"></div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <div class="input-group">
                        <input type="text" id="message" placeholder="Type your message..." class="form-control message-input">
                        <button onclick="sendMessage()" class="btn btn-primary send-button">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .chatbox {
        min-height: 300px;
        max-height: 400px;
        overflow-y: auto;
        padding: 16px;
        background: #f1f5f9;
        border-radius: 0 0 0.5rem 0.5rem;
    }
    .message-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }
    .message {
        max-width: 80%;
        padding: 10px 15px;
        border-radius: 15px;
        line-height: 1.4;
        word-wrap: break-word;
        font-size: 0.96rem;
        margin-bottom: 2px;
    }
    .message.user {
        align-self: flex-end;
        background: #3b82f6;
        color: #fff;
        border-bottom-right-radius: 0;
    }
    .message.bot {
        align-self: flex-start;
        background: #e2e8f0;
        color: #1e293b;
        border-bottom-left-radius: 0;
    }
    .timestamp {
        font-size: 0.74rem;
        color: #94a3b8;
        margin-top: 2px;
        text-align: right;
    }
    .loading {
        font-style: italic;
        color: #6b7280;
        text-align: center;
        padding: 10px 0;
    }
    .send-button {
        font-weight: 600;
    }
    @media (max-width: 576px) {
        .chatbox {
            min-height: 200px;
            max-height: 300px;
            padding: 8px;
        }
    }
</style>

<script>
    function appendMessage(sender, message, timestamp) {
        const chatbox = document.querySelector('.message-list');
        const messageDiv = document.createElement('div');
        messageDiv.classList.add('message', sender.toLowerCase());
        messageDiv.innerHTML = `
            <div>${message}</div>
            <div class="timestamp">${timestamp}</div>
        `;
        chatbox.appendChild(messageDiv);
        chatbox.scrollTop = chatbox.scrollHeight;
    }

    function sendMessage() {
        const input = document.getElementById('message');
        const message = input.value.trim();
        if (!message) return;

        const timestamp = new Date().toLocaleTimeString();
        appendMessage('User', message, timestamp);
        input.value = '';

        const loadingDiv = document.createElement('div');
        loadingDiv.classList.add('loading');
        loadingDiv.textContent = 'AI is typing...';
        document.querySelector('.message-list').appendChild(loadingDiv);

        fetch('/chat/send', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ message })
        })
        .then(res => res.json())
        .then(data => {
            document.querySelector('.loading').remove();
            appendMessage('Bot', data.response, timestamp);
        })
        .catch(err => {
            document.querySelector('.loading').remove();
            appendMessage('Bot', '‚ùå Error connecting to the server.', timestamp);
        });
    }

    document.getElementById('message').addEventListener('keypress', function (e) {
        if (e.key === 'Enter') sendMessage();
    });
</script>
{% endblock %}