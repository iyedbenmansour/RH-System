{# templates/home/index.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(to right, #6a4cff, #231a6f);
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #fff;
        }

        .container {
            background-color: #fff;
            padding: 50px;  /* Increased padding */
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 90%;
            max-width: 500px; /* Increased width */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .container:hover {
            transform: translateY(-10px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

        h3 {
            font-size: 2.8rem;
            color: #231a6f;
            margin-bottom: 15px;
        }

        p {
            font-size: 1.2rem;
            color: #555;
            margin-bottom: 30px;
        }

        .btn {
            display: inline-block;
            padding: 15px 30px;
            margin: 15px 10px;
            background-color: #231a6f;
            color: white;
            font-size: 1.1rem;
            text-decoration: none;
            border-radius: 6px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            width: 180px;
            text-align: center;
        }

        .btn:hover {
            background-color: #1d1460;
            transform: scale(1.05);
        }

        .btn:active {
            background-color: #130e49;
        }

        @media (max-width: 600px) {
            h1 {
                font-size: 2rem;
            }

            .btn {
                width: 140px;
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>

<div class="container">
    <h3>Welcome to career bridge !</h3>
    <p>Please choose your role:</p>
    
    <div class="buttons">
        <a href="{{ path('admin_dashboard') }}" class="btn">Admin</a>
        <a href="{{ path('user_dashboard') }}" class="btn">User</a>
    </div>
</div>

</body>
</html>
