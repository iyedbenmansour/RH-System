{% extends 'base.html.twig' %}

{% block title %}My Leave Requests - Staff Portal{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
<style>
    /* Base Styles */
    body {
        background-color: #f8f9fa;
        padding-top: 80px; /* Account for fixed navbar */
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        color: #111827;
    }
    
    .page-header {
        background: linear-gradient(135deg, #4f46e5 0%, #4338ca 100%);
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }
    
    /* Card styling */
    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }
    
    .card-header-custom {
        background-color: #ffffff;
        border-bottom: 1px solid #e5e7eb;
        padding: 1.5rem;
    }
    
    /* Stats Cards */
    .stats-card {
        height: 100%;
    }
    
    /* Summary section */
    .leave-summary {
        background-color: #fff;
        padding: 1.5rem;
        border-bottom: 1px solid #e5e7eb;
    }
    
    .leave-summary-item {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
    }
    
    .leave-summary-label {
        font-weight: 500;
        color: #6b7280;
        margin-right: 0.75rem;
    }
    
    .leave-summary-value {
        font-weight: 600;
        padding: 0.5rem 1rem;
        border-radius: 30px;
        font-size: 0.875rem;
    }
    
    .confirmed-days {
        background-color: rgba(16, 185, 129, 0.1);
        color: #065f46;
    }
    
    .remaining-days {
        background-color: rgba(79, 70, 229, 0.1);
        color: #4338ca;
    }
    
    .remaining-days-negative {
        background-color: rgba(239, 68, 68, 0.1);
        color: #b91c1c;
    }
    
    /* Table styling */
    .request-table {
        background: white;
        overflow: hidden;
        margin-bottom: 0;
    }
    
    .request-table th {
        font-weight: 600;
        color: #6b7280;
        padding: 1rem 1.5rem;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.7px;
        border-bottom: 1px solid #e5e7eb;
        background-color: #f8f9fa;
    }
    
    .request-table td {
        vertical-align: middle;
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #e5e7eb;
    }
    
    .request-table tr:last-child td {
        border-bottom: none;
    }
    
    .request-table tbody tr {
        transition: background-color 0.15s ease;
    }
    
    .request-table tbody tr:hover {
        background-color: rgba(79, 70, 229, 0.03);
    }
    
    /* Date badge */
    .date-badge {
        background-color: #f3f4f6;
        border-radius: 10px;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        color: #111827;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
    }
    
    .date-badge i {
        margin-right: 0.5rem;
        color: #6b7280;
    }
    
    /* Leave type badges */
    .leave-type-badge {
        padding: 0.5rem 1rem;
        border-radius: 30px;
        font-size: 0.875rem;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
    }
    
    .leave-type-badge i {
        margin-right: 0.5rem;
    }
    
    .type-vacation {
        background-color: rgba(6, 182, 212, 0.1);
        color: #0e7490;
    }
    
    .type-sick {
        background-color: rgba(239, 68, 68, 0.1);
        color: #b91c1c;
    }
    
    .type-personal {
        background-color: rgba(16, 185, 129, 0.1);
        color: #047857;
    }
    
    .type-normal {
        background-color: rgba(79, 70, 229, 0.1);
        color: #4338ca;
    }
    
    .type-other {
        background-color: rgba(107, 114, 128, 0.1);
        color: #4b5563;
    }
    
    /* Status indicators */
    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }
    
    .status-confirmed {
        background-color: rgba(16, 185, 129, 0.1);
        color: #065f46;
    }
    
    .status-pending {
        background-color: rgba(245, 158, 11, 0.1);
        color: #92400e;
    }
    
    /* Buttons */
    .btn {
        font-weight: 500;
        border-radius: 10px;
        padding: 0.625rem 1.25rem;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }
    
    .btn-primary {
        background-color: #4f46e5;
        border-color: #4f46e5;
    }
    
    .btn-primary:hover {
        background-color: #4338ca;
        border-color: #4338ca;
        transform: translateY(-2px);
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
    }
    
    .action-btn {
        border-radius: 8px;
        padding: 0.4rem 0.8rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }
    
    .action-btn:hover {
        transform: translateY(-2px);
    }
    
    /* Empty state */
    .empty-state {
        padding: 4rem 2rem;
        text-align: center;
        background-color: #ffffff;
    }
    
    .empty-state-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(79, 70, 229, 0.1);
        color: #4f46e5;
        border-radius: 50%;
        font-size: 2rem;
    }
    
    .empty-state h5 {
        font-weight: 600;
        margin-bottom: 1rem;
        color: #111827;
    }
    
    .empty-state p {
        color: #6b7280;
        max-width: 400px;
        margin: 0 auto 2rem;
    }
    
    /* Add Request Button */
    .add-request-btn {
        position: fixed;
        bottom: 30px;
        right: 30px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: #4f46e5;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 5px 15px rgba(79, 70, 229, 0.3);
        transition: all 0.3s ease;
        z-index: 100;
    }
    
    .add-request-btn:hover {
        transform: scale(1.1);
        background: #4338ca;
    }
    
    .add-request-btn i {
        font-size: 1.5rem;
    }
    
    /* Truncate text for description */
    .truncate-text {
        max-width: 250px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    
    /* Container spacing */
    .main-container {
        max-width: 1200px;
        padding: 2rem 1.5rem;
    }
    
    /* Action group */
    .action-group {
        display: flex;
        gap: 0.5rem;
    }
    
    /* Pagination styles */
    .pagination {
        display: flex;
        justify-content: center;
        padding: 1.5rem 0;
        gap: 0.5rem;
    }
    
    .page-item {
        margin: 0;
    }
    
    .page-link {
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 2.5rem;
        height: 2.5rem;
        padding: 0 0.75rem;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        color: #111827;
        font-weight: 500;
        transition: all 0.2s ease;
    }
    
    .page-link:hover {
        background-color: #f3f4f6;
        color: #4f46e5;
        text-decoration: none;
    }
    
    .page-item.active .page-link {
        background-color: #4f46e5;
        border-color: #4f46e5;
        color: white;
    }
    
    .page-item.disabled .page-link {
        color: #d1d5db;
        pointer-events: none;
    }
    
    /* Access Required Card */
    .alert-icon {
        font-size: 3rem;
        color: #f59e0b;
        margin-bottom: 1rem;
    }
    
    /* Stats Cards Row */
    .stats-row {
        margin-bottom: 2rem;
    }
    
    /* Responsive adjustments */
    @media (max-width: 992px) {
        .stats-card {
            margin-bottom: 1rem;
        }
    }
    
    @media (max-width: 768px) {
        .page-header {
            padding: 1.5rem;
        }
        
        .card-header-custom {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }
        
        .leave-summary {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
            padding: 1.25rem;
        }
        
        .request-table thead {
            display: none;
        }
        
        .request-table tbody tr {
            display: flex;
            flex-direction: column;
            padding: 1rem 0;
            border-bottom: 1px solid #e5e7eb;
        }
        
        .request-table td {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 1.25rem;
            border-bottom: none;
        }
        
        .request-table td:before {
            content: attr(data-label);
            font-weight: 600;
            color: #6b7280;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .action-group {
            justify-content: flex-start;
            flex-wrap: wrap;
        }
        
        .pagination {
            flex-wrap: wrap;
            justify-content: center;
            gap: 0.5rem;
        }
    }
</style>
{% endblock %}

{% block body %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const employeeId = localStorage.getItem('employee_id');
        
        if (!employeeId) {
            // Show access restricted view
            document.body.innerHTML = `
                <div class="container main-container py-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-white border-0 pt-4">
                            <h4 class="mb-0 fw-bold">Access Required</h4>
                        </div>
                        <div class="card-body text-center py-5">
                            <div class="empty-state">
                                <div class="empty-state-icon bg-soft-warning">
                                    <i class="bi bi-shield-lock"></i>
                                </div>
                                <h3 class="mt-3 fw-bold">Employee ID Required</h3>
                                <p class="mb-4 text-secondary">To access your leave requests, please set your Employee ID</p>
                                <div class="d-flex justify-content-center gap-3">
                                    <input type="text" id="employeeIdInput" class="form-control form-control-lg rounded-pill w-50" placeholder="Enter Employee ID">
                                    <button class="btn btn-primary rounded-pill px-4" id="setEmployeeIdBtn">
                                        <i class="bi bi-check-circle me-2"></i>Set ID
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            document.getElementById('setEmployeeIdBtn').addEventListener('click', function() {
                const id = document.getElementById('employeeIdInput').value.trim();
                if (id) {
                    localStorage.setItem('employee_id', id);
                    location.reload();
                } else {
                    alert('Please enter a valid Employee ID');
                }
            });
            return;
        }

        // Fetch data with employee_id in headers
        fetch('/leave-requests/employee', {
            method: 'GET',
            headers: {
                'Authorization': employeeId
            }
        })
        .then(response => {
            if (!response.ok) throw new Error('Network response was not ok');
            return response.text();
        })
        .then(html => {
            document.body.innerHTML = html;
        })
        .catch(error => {
            console.error('Error:', error);
            document.body.innerHTML = `
                <div class="container main-container py-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-white border-0 pt-4">
                            <h4 class="mb-0 fw-bold">Error Loading Data</h4>
                        </div>
                        <div class="card-body text-center py-5">
                            <div class="empty-state">
                                <div class="empty-state-icon bg-soft-danger">
                                    <i class="bi bi-exclamation-octagon-fill text-danger"></i>
                                </div>
                                <h3 class="fw-bold">Connection Error</h3>
                                <p class="mb-4 text-secondary">We couldn't load your leave requests. Please try again later.</p>
                                <button class="btn btn-primary rounded-pill px-4" onclick="location.reload()">
                                    <i class="bi bi-arrow-repeat me-2"></i>Try Again
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        });
    });
</script>

<div class="container main-container py-4">
    <!-- Page Header -->
    <div class="page-header text-white mb-4">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="fw-bold mb-2">My Leave Requests</h1>
                <p class="opacity-75 mb-0">Manage and track your time off requests</p>
            </div>
            <div class="col-lg-6">
                <div class="d-flex justify-content-lg-end mt-3 mt-lg-0">
                    <a href="{{ path('leave_request_create') }}" class="btn btn-light rounded-pill">
                        <i class="bi bi-plus-lg me-2"></i>New Request
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    {% if leaveRequests|length > 0 %}
        <!-- Stats Cards Row -->
        <div class="row stats-row">
            <!-- Confirmed Days -->
            <div class="col-md-6 mb-4">
                <div class="stats-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-soft-success p-3 rounded-circle me-3">
                                <i class="bi bi-calendar-check text-success"></i>
                            </div>
                            <h6 class="text-uppercase mb-0 text-muted">Confirmed Normal Leave</h6>
                        </div>
                        <h2 class="fw-bold mb-0">{{ confirmedNormalDays }} days</h2>
                        <div class="progress mt-3" style="height: 6px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 100%"></div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Remaining Days -->
            <div class="col-md-6 mb-4">
                <div class="stats-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-soft-primary p-3 rounded-circle me-3">
                                <i class="bi bi-calendar-week text-primary"></i>
                            </div>
                            <h6 class="text-uppercase mb-0 text-muted">Remaining Normal Leave</h6>
                        </div>
                        <h2 class="fw-bold mb-0">{{ remainingDays }} days</h2>
                        <div class="progress mt-3" style="height: 6px;">
                            <div class="progress-bar {{ remainingDays >= 0 ? 'bg-primary' : 'bg-danger' }}" role="progressbar" style="width: {{ remainingDays >= 0 ? (remainingDays / 30) * 100 : 100 }}%"></div>
                        </div>
                        {% if remainingDays < 0 %}
                            <small class="text-danger mt-2 d-block">(Exceeded allowance)</small>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Leave Requests Table -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white p-4 border-0">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <h5 class="mb-0 fw-bold">Leave History</h5>
                    <div class="d-flex gap-2">
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-funnel me-1"></i> Filter
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">All Requests</a></li>
                                <li><a class="dropdown-item" href="#">Pending</a></li>
                                <li><a class="dropdown-item" href="#">Confirmed</a></li>
                            </ul>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-sort-down me-1"></i> Sort
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Date (newest)</a></li>
                                <li><a class="dropdown-item" href="#">Date (oldest)</a></li>
                                <li><a class="dropdown-item" href="#">Type</a></li>
                                <li><a class="dropdown-item" href="#">Status</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="table-responsive">
                <table class="table request-table">
                    <thead>
                        <tr>
                            <th scope="col">Date Range</th>
                            <th scope="col">Type</th>
                            <th scope="col">Description</th>
                            <th scope="col">Status</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for request in leaveRequests %}
                            <tr>
                                <td data-label="Date Range">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            <div class="bg-soft-secondary rounded text-center p-2" style="width: 45px;">
                                                <small class="text-muted d-block">{{ request.startDate|date('M') }}</small>
                                                <span class="fw-bold">{{ request.startDate|date('d') }}</span>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="fw-bold">{{ request.startDate|date('Y') }}</div>
                                            <small class="text-muted">to {{ request.endDate|date('M d, Y') }}</small>
                                        </div>
                                    </div>
                                </td>
                                <td data-label="Type">
                                    {% set typeClass = 'type-other' %}
                                    {% set typeIcon = 'calendar-date' %}
                                    
                                    {% if request.leaveType == 'Vacation' %}
                                        {% set typeClass = 'type-vacation' %}
                                        {% set typeIcon = 'airplane' %}
                                    {% elseif request.leaveType == 'Sick' %}
                                        {% set typeClass = 'type-sick' %}
                                        {% set typeIcon = 'thermometer-half' %}
                                    {% elseif request.leaveType == 'Personal' %}
                                        {% set typeClass = 'type-personal' %}
                                        {% set typeIcon = 'person' %}
                                    {% elseif request.leaveType == 'Normal' %}
                                        {% set typeClass = 'type-normal' %}
                                        {% set typeIcon = 'calendar-check' %}
                                    {% endif %}
                                    
                                    <span class="leave-type-badge {{ typeClass }}">
                                        <i class="bi bi-{{ typeIcon }}"></i>
                                        {{ request.leaveType }}
                                    </span>
                                </td>
                                <td data-label="Description">
                                    <div class="truncate-text" title="{{ request.description }}">
                                        {{ request.description }}
                                    </div>
                                </td>
                                <td data-label="Status">
                                    <span class="status-badge {{ request.isConfirmed ? 'status-confirmed' : 'status-pending' }}">
                                        <i class="bi {{ request.isConfirmed ? 'bi-check-circle' : 'bi-hourglass-split' }}"></i>
                                        {{ request.isConfirmed ? 'Confirmed' : 'Pending' }}
                                    </span>
                                </td>
                                <td data-label="Actions" class="text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        {% if request.pdfPath %}
                                            <a href="{{ asset('uploads/pdfs/' ~ request.pdfPath) }}"
                                               class="btn btn-outline-primary action-btn"
                                               target="_blank">
                                                <i class="bi bi-file-earmark-pdf"></i>
                                            </a>
                                        {% endif %}
                                        
                                        <a href="{{ path('leave_request_edit', { id: request.id }) }}"
                                           class="btn btn-outline-secondary action-btn">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        
                                        <form action="{{ path('leave_request_delete', { id: request.id }) }}"
                                              method="post"
                                              class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ request.id) }}">
                                            <button type="submit"
                                                    class="btn btn-outline-danger action-btn"
                                                    onclick="return confirm('Are you sure you want to delete this request?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                        
                                        {% if request.isConfirmed %}
                                            {% set onlineJob = onlineJobs[request.id] ?? null %}
                                            {% if onlineJob %}
                                                <a href="{{ path('online_job_view', { id: onlineJob.id }) }}"
                                                   class="btn btn-outline-info action-btn">
                                                    <i class="bi bi-laptop"></i>
                                                </a>
                                            {% else %}
                                                <a href="{{ path('online_job_create', { leaveRequestId: request.id }) }}"
                                                   class="btn btn-outline-info action-btn">
                                                    <i class="bi bi-laptop"></i>
                                                </a>
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="card-footer bg-white border-0 p-4">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div class="text-muted">
                        Showing <span class="fw-bold">1</span> to <span class="fw-bold">{{ leaveRequests|length }}</span> of <span class="fw-bold">{{ leaveRequests|length }}</span> entries
                    </div>
                    <div class="navigation">
                        {{ knp_pagination_render(leaveRequests) }}
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Add Request Floating Button -->
        <a href="{{ path('leave_request_create') }}" class="add-request-btn">
            <i class="bi bi-plus-lg"></i>
        </a>
    {% else %}
        <!-- Empty State -->
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="card-body p-5 text-center bg-light">
                <div class="empty-state">
                    <div class="empty-state-icon mb-4">
                        <i class="bi bi-calendar3"></i>
                    </div>
                    <h3 class="fw-bold mb-3">No Leave Requests Found</h3>
                    <p class="text-muted mb-4">You haven't created any leave requests yet. Ready to take some time off?</p>
                    <a href="{{ path('leave_request_create') }}" class="btn btn-primary btn-lg rounded-pill">
                        <i class="bi bi-plus-lg me-2"></i>Create Your First Request
                    </a>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}