{% extends 'baseBack.html.twig' %}

{% block title %}Employee Leave Ranking{% endblock %}

{% block body %}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const localCompanyId = localStorage.getItem('company_id');

        // If company_id is not in local storage, show access restricted
        if (!localCompanyId) {
            document.body.innerHTML = `
                <div class="container mt-5">
                    <div class="alert alert-danger text-center">
                        <i class="bi bi-shield-lock fs-1"></i>
                        <h2 class="mt-3">Access Restricted</h2>
                        <p>Please set your Company ID in your browser's local storage to access this page.</p>
                        <input id="companyIdInput" type="text" placeholder="Enter Company ID" class="form-control mb-3 mx-auto" style="max-width: 300px;">
                        <button id="setCompanyIdBtn" class="btn btn-primary">Set Company ID</button>
                    </div>
                </div>
            `;
            
            document.getElementById('setCompanyIdBtn').onclick = function () {
                const val = document.getElementById('companyIdInput').value.trim();
                if (!val) return alert('Please enter a company ID.');
                localStorage.setItem('company_id', val);
                location.reload();
            };
            return;
        }

        // Inject `company_id` into the request headers and fetch data
        fetch(window.location.pathname, {
            method: 'GET',
            headers: {
                'Authorization': localCompanyId,
            },
        })
            .then(response => response.text())
            .then(html => {
                document.body.innerHTML = html;
            })
            .catch(error => {
                console.error('Error fetching leave ranking:', error);
                document.body.innerHTML = `
                    <div class="container mt-5">
                        <div class="alert alert-danger text-center">
                            <i class="bi bi-exclamation-triangle fs-1"></i>
                            <h2 class="mt-3">Failed to Load Data</h2>
                            <p>Please check your network connection or try again later.</p>
                            <button class="btn btn-secondary" onclick="location.reload()">Try Again</button>
                        </div>
                    </div>
                `;
            });
    });
</script>

<div class="container mt-5">
    {% if companyId %}
        <h1 class="mb-4 text-center text-primary display-6">üè¢ Leave Ranking - Company #{{ companyId }}</h1>

        {% if leaveRanking is empty %}
            <div class="alert alert-info">No leave requests found for this company.</div>
        {% else %}
            <div class="row justify-content-center mb-5">
                {% for top in leaveRanking|slice(0, 3) %}
                    <div class="col-md-4">
                        <div class="card text-center shadow podium-card position-{{ top.position }}">
                            <div class="card-body">
                                <h2 class="display-5 fw-bold text-{{ top.position == 1 ? 'warning' : (top.position == 2 ? 'secondary' : 'info') }}">
                                    #{{ top.rank }}
                                </h2>
                                <p class="fs-5 mb-1">Employee <strong>#{{ top.employeeId }}</strong></p>
                                <p class="text-muted">Leave Requests: {{ top.leaveCount }}</p>
                                <div class="badge bg-light text-dark mt-2">{{ top.comment }}</div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h2 class="h5 mb-0">üìã Full Leave Ranking</h2>
                </div>

                <div class="card-body">
                    <table class="table table-striped align-middle table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Rank</th>
                                <th>Employee ID</th>
                                <th>Number of Leave Requests</th>
                                <th>Comment</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ranking in leaveRanking %}
                                <tr class="{% if ranking.position %}table-{{ ranking.position == 1 ? 'warning' : (ranking.position == 2 ? 'secondary' : 'info') }}{% endif %}">
                                    <td>{{ ranking.rank }}</td>
                                    <td>{{ ranking.employeeId }}</td>
                                    <td>{{ ranking.leaveCount }}</td>
                                    <td>{{ ranking.comment }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endif %}
    {% else %}
        <div class="alert alert-danger text-center">
            <i class="bi bi-shield-lock fs-1"></i>
            <h2 class="mt-3">Access Restricted</h2>
            <p>Please set your Company ID in your browser's local storage to access this page.</p>
        </div>
    {% endif %}

    <div class="mt-4 text-center">
        <a href="/" class="btn btn-outline-secondary">‚Üê Back to Dashboard</a>
    </div>
</div>

<style>
    .podium-card {
        border-radius: 1rem;
        transition: transform 0.3s ease;
    }
    .podium-card:hover {
        transform: translateY(-5px);
    }
    .position-1 {
        border-top: 4px solid gold;
    }
    .position-2 {
        border-top: 4px solid silver;
    }
    .position-3 {
        border-top: 4px solid #cd7f32;
    }
</style>
{% endblock %}